<UserControl x:Class="FactoryManagement.Views.ContactsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:FactoryManagement.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Summary Cards -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Parties Card -->
            <Border Grid.Column="0" Background="{StaticResource Card.Info}" Style="{StaticResource SummaryCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="ðŸ‘¥" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Total Parties" Foreground="{StaticResource Card.Info.Label}" FontSize="11" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding TotalParties}" 
                                   Foreground="White" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Active Parties Card -->
            <Border Grid.Column="2" Background="{StaticResource Card.Success}" Style="{StaticResource SummaryCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="âœ…" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Active Parties" Foreground="{StaticResource Card.Success.Label}" FontSize="11" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding ActiveParties}" 
                                   Foreground="White" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Outstanding Balance Card -->
            <Border Grid.Column="4" Background="{StaticResource Card.Danger}" Style="{StaticResource SummaryCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="ðŸ’¸" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Outstanding" Foreground="{StaticResource Card.Danger.Label}" FontSize="11" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding OutstandingBalance, StringFormat='â‚¹{0:N2}'}" 
                                   Foreground="White" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Recent Activity Card -->
            <Border Grid.Column="6" Background="{StaticResource Card.Warning}" Style="{StaticResource SummaryCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="ðŸ“Š" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Recent Activity" Foreground="{StaticResource Card.Warning.Label}" FontSize="11" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding RecentActivityCount}" 
                                   Foreground="White" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="500"/>
            </Grid.ColumnDefinitions>

            <!-- Parties List -->
            <Border Grid.Column="0" Margin="0,0,12,0" Style="{StaticResource FormCard}">
                <DockPanel>
                    <!-- Header -->
                    <Border DockPanel.Dock="Top" Style="{StaticResource SectionHeader.Prominent}">
                        <StackPanel Style="{StaticResource SectionHeader}" Margin="0">
                            <Border Style="{StaticResource IconBadge}" Background="{StaticResource Card.Info}">
                                <materialDesign:PackIcon Kind="AccountGroup" Width="20" Height="20" 
                                                       Foreground="White" 
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <StackPanel Style="{StaticResource SectionHeader.Content}">
                                <TextBlock Text="All Parties" Style="{StaticResource SectionHeader.Title}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Search Box -->
                    <Border DockPanel.Dock="Top" 
                            Background="{StaticResource Card.Header}"
                            CornerRadius="8"
                            Padding="12,8"
                            Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="Magnify" 
                                                   Foreground="{StaticResource Text.Secondary}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBox Grid.Column="1"
                                   Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                   materialDesign:HintAssist.Hint="Search parties by name, mobile, or place..."
                                   Style="{StaticResource TextBox.Standard}"
                                   Margin="0,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid ItemsSource="{Binding Parties}" SelectedItem="{Binding SelectedParty}" Style="{StaticResource Section.DataGrid}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGrid.Header.Standard}"/>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding PartyId}" Width="70"></DataGridTextColumn>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"></DataGridTextColumn>
                            <DataGridTextColumn Header="Mobile" Binding="{Binding MobileNumber}" Width="140"></DataGridTextColumn>
                            <DataGridTextColumn Header="Place" Binding="{Binding Place}" Width="150"></DataGridTextColumn>
                            <DataGridTextColumn Header="Type" Binding="{Binding PartyType}" Width="90"></DataGridTextColumn>
                            <DataGridTemplateColumn Header="Actions" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Style="{StaticResource DataGrid.EditButton}"
                                                  Command="{Binding DataContext.EditPartyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"
                                                  ToolTip="Edit">
                                                <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16"/>
                                            </Button>
                                            <Button Style="{StaticResource DataGrid.EditButton}"
                                                  Command="{Binding DataContext.DeletePartyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"
                                                  ToolTip="Delete"
                                                  Margin="4,0,0,0"
                                                  Foreground="#EF5350">
                                                <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>

            <!-- Party Form -->
            <Border Grid.Column="1" Style="{StaticResource FormCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Border Grid.Row="0" Background="{StaticResource Card.Header}" Padding="15" Margin="-24,-24,-24,20" CornerRadius="8,8,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Style="{StaticResource SectionHeader}" Margin="0">
                                <Border Style="{StaticResource IconBadge}" Background="{StaticResource Card.Info}">
                                    <materialDesign:PackIcon Kind="AccountEdit" Width="20" Height="20" 
                                                           Foreground="White" 
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                <StackPanel Style="{StaticResource SectionHeader.Content}">
                                    <TextBlock Text="{Binding IsEditMode, Converter={StaticResource EditModeToTextConverter}}" 
                                             Style="{StaticResource SectionHeader.Title}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <Button Grid.Column="1"
                                  Content="+ New"
                                  Command="{Binding NewPartyCommand}"
                                  Style="{StaticResource MaterialDesignFlatButton}"
                                  Foreground="{StaticResource AccentCyan}"
                                  Height="28"
                                  Padding="12,0"
                                  FontSize="12"
                                  FontWeight="SemiBold"
                                  ToolTip="Clear the form to add a new party"/>
                        </Grid>
                    </Border>
                    
                <ScrollViewer Grid.Row="1" Style="{StaticResource Section.ScrollViewer}">
                    <StackPanel>
                            <!-- Party Name -->
                            <TextBlock Text="Party Name *" 
                                     Foreground="{StaticResource Text.Label}"
                                     FontSize="11"
                                     Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                   materialDesign:HintAssist.Hint="Enter party name"
                                   Style="{StaticResource TextBox.Standard}"
                                   Margin="0,0,0,20"/>

                            <!-- Mobile Number -->
                            <TextBlock Text="Mobile Number" 
                                     Foreground="{StaticResource Text.Label}"
                                     FontSize="11"
                                     Margin="0,0,0,8"/>
                            <TextBox Text="{Binding MobileNumber, UpdateSourceTrigger=PropertyChanged}"
                                   materialDesign:HintAssist.Hint="Enter mobile number"
                                   Style="{StaticResource TextBox.Standard}"
                                   Margin="0,0,0,20"/>

                            <!-- Place -->
                            <TextBlock Text="Place" 
                                     Foreground="{StaticResource Text.Label}"
                                     FontSize="11"
                                     Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Place, UpdateSourceTrigger=PropertyChanged}"
                                   materialDesign:HintAssist.Hint="Enter place/location"
                                   Style="{StaticResource TextBox.Standard}"
                                   Margin="0,0,0,20"/>

                            <!-- Party Type -->
                            <TextBlock Text="Party Type *" 
                                     Foreground="{StaticResource Text.Label}"
                                     FontSize="11"
                                     Margin="0,0,0,8"/>
                            <ComboBox SelectedIndex="{Binding PartyType}"
                                    materialDesign:HintAssist.Hint="Select party type"
                                    Style="{StaticResource ComboBox.Standard}"
                                    Margin="0,0,0,20">
                                <ComboBoxItem Content="Buyer"/>
                                <ComboBoxItem Content="Seller"/>
                                <ComboBoxItem Content="Both"/>
                            </ComboBox>

                            <!-- Error Message -->
                            <Border Style="{StaticResource InfoBox}" 
                                    Background="#3a2020"
                                    BorderBrush="{StaticResource Card.Danger}"
                                    Visibility="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"
                                    Margin="0,0,0,16">
                                <TextBlock Text="{Binding ErrorMessage}"
                                         Foreground="#EF5350"
                                         TextWrapping="Wrap"/>
                            </Border>

                            <!-- Action Buttons -->
                            <Button Content="SAVE PARTY"
                                  Command="{Binding SavePartyCommand}"
                                  Style="{StaticResource Button.Success}"
                                  HorizontalAlignment="Stretch"
                                  Height="44"
                                  FontSize="13"
                                  FontWeight="SemiBold"
                                  ToolTip="Save this party to the database. Name and Party Type are required fields"/>
                    </StackPanel>
                </ScrollViewer>
                </Grid>
            </Border>

            <!-- Loading Overlay -->
            <Grid Grid.ColumnSpan="2" Background="#80000000" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                           Value="0"
                           IsIndeterminate="True"
                           Width="50" Height="50"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>


<Application x:Class="FactoryManagement.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:FactoryManagement.Converters"
             xmlns:viewmodels="clr-namespace:FactoryManagement.ViewModels"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="DeepPurple" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="Themes/DarkColors.xaml" />
                <ResourceDictionary Source="Themes/DarkTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Enable Smooth Animations -->
            <Duration x:Key="MaterialDesignTransitionDuration">0:0:0.3</Duration>
            <System:Boolean x:Key="MaterialDesignDisableTransitions">False</System:Boolean>
            
            <!-- Legacy Gradient Aliases for Compatibility -->
            <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#B8B0FF" Offset="0"/>
                <GradientStop Color="#6B5DD3" Offset="1"/>
            </LinearGradientBrush>
            
            <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#B8B0FF" Offset="0"/>
                <GradientStop Color="#6B5DD3" Offset="1"/>
            </LinearGradientBrush>
            
            <LinearGradientBrush x:Key="InfoGradient" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#00FF88" Offset="0"/>
                <GradientStop Color="#00D4FF" Offset="1"/>
            </LinearGradientBrush>
            
            <!-- Legacy Color Aliases for existing code compatibility -->
            <SolidColorBrush x:Key="PrimaryPurple" Color="#B8B0FF"/>
            <SolidColorBrush x:Key="PrimaryPurpleLight" Color="#C4B5FF"/>
            <SolidColorBrush x:Key="PrimaryPurpleDark" Color="#6B5DD3"/>
            <SolidColorBrush x:Key="AccentCyan" Color="#00D4FF"/>
            <SolidColorBrush x:Key="BackgroundDark" Color="#1A1D29"/>
            <SolidColorBrush x:Key="SurfaceDark" Color="#252837"/>
            <SolidColorBrush x:Key="SurfaceLight" Color="#2D3142"/>
            <SolidColorBrush x:Key="HeaderBackground" Color="#363B4E"/>
            <SolidColorBrush x:Key="HeaderText" Color="#E8E9F3"/>
            <SolidColorBrush x:Key="RowText" Color="#E8E9F3"/>
            <SolidColorBrush x:Key="MutedText" Color="#A0A3BD"/>
            <SolidColorBrush x:Key="LinkText" Color="#4A9EFF"/>
            
            <!-- Modern Card Style with Glass Morphism -->
            <Style x:Key="ModernCard" TargetType="materialDesign:Card" BasedOn="{StaticResource {x:Type materialDesign:Card}}">
                <Setter Property="UniformCornerRadius" Value="16"/>
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
                <Setter Property="Margin" Value="12"/>
                <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp8"/>
                        <Setter Property="Background" Value="{StaticResource ElevatedBackground}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- Animated Gradient Card -->
            <Style x:Key="GradientCard" TargetType="materialDesign:Card" BasedOn="{StaticResource ModernCard}">
                <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
                <Style.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(materialDesign:ElevationAssist.Elevation)" 
                                               To="16" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(materialDesign:ElevationAssist.Elevation)" 
                                               To="4" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Style.Triggers>
            </Style>
            
            <!-- Modern Button Style -->
            <Style x:Key="ModernButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="Height" Value="44"/>
                <Setter Property="Padding" Value="24,0"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.9"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- Converters -->
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
                <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            <converters:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibilityConverter"/>
            <converters:EditModeToTextConverter x:Key="EditModeToTextConverter"/>
            <converters:TransactionTypeConverter x:Key="TransactionTypeConverter"/>
            <converters:BoolToTextConverter x:Key="BoolToTextConverter"/>
            <converters:EnumVisibilityConverter x:Key="EnumVisibilityConverter"/>
            <converters:EnumToFriendlyStringConverter x:Key="EnumToFriendlyStringConverter"/>
            <converters:WageTransactionTypeConverter x:Key="WageTransactionTypeConverter"/>
            <converters:StockBarWidthConverter x:Key="StockBarWidthConverter"/>
            <converters:StockLevelColorConverter x:Key="StockLevelColorConverter"/>
            <converters:StockToRectConverter x:Key="StockToRectConverter"/>
            <converters:TransactionBarHeightConverter x:Key="TransactionBarHeightConverter"/>
            <converters:TransactionBarHeightConverter2 x:Key="TransactionBarHeightConverter2"/>
            <converters:TransactionBarHeightConverter3 x:Key="TransactionBarHeightConverter3"/>
            <converters:LoanBarHeightConverter x:Key="LoanBarHeightConverter"/>
            <converters:LoanBarHeightConverter2 x:Key="LoanBarHeightConverter2"/>
            <converters:WageBarHeightConverter x:Key="WageBarHeightConverter"/>
            <converters:WageBarHeightConverter2 x:Key="WageBarHeightConverter2"/>
            <converters:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter"/>
            
            <!-- Enhanced DataGrid Styles aligned with dark theme suggestions -->
            <Style x:Key="EnhancedDataGrid" TargetType="DataGrid" BasedOn="{StaticResource MaterialDesignDataGrid}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="RowBackground" Value="{StaticResource PrimaryBackground}"/>
                <Setter Property="AlternatingRowBackground" Value="{StaticResource SecondaryBackground}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="GridLinesVisibility" Value="None"/>
                <Setter Property="HeadersVisibility" Value="Column"/>
                <Setter Property="CanUserAddRows" Value="False"/>
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="IsReadOnly" Value="True"/>
            </Style>
            
            <Style x:Key="EnhancedDataGridColumnHeader" TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                <Setter Property="Background" Value="{StaticResource ElevatedBackground}"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderPrimary}"/>
            </Style>
            
            <Style x:Key="EnhancedDataGridRow" TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                <Setter Property="Height" Value="42"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{StaticResource ElevatedBackground}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <Style x:Key="EnhancedDataGridCell" TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="10,0"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderThickness="0" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <!-- Converters for theme-aware bindings -->
            <converters:AmountToBrushConverter x:Key="AmountToBrushConverter"/>
            <converters:StockLevelPercentConverter x:Key="StockLevelPercentConverter"/>
            <!-- New converters for Debit/Credit split amounts -->
            <converters:DebitCreditAmountConverter x:Key="DebitCreditAmountConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>

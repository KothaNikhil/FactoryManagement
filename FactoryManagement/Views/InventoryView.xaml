<UserControl x:Class="FactoryManagement.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="clr-namespace:FactoryManagement.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Summary Cards -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Items Card -->
            <controls:SummaryCard Grid.Column="0" 
                                Label="Total Items" 
                                Value="{Binding TotalItems}" 
                                Icon="ðŸ“¦" 
                                CardBackground="{StaticResource Card.Success}" 
                                LabelForeground="{StaticResource Card.Success.Label}" />

            <!-- Total Stock Value Card -->
            <controls:SummaryCard Grid.Column="2" 
                                Label="Total Stock" 
                                Value="{Binding TotalStockValue}" 
                                Icon="ðŸ“Š" 
                                CardBackground="{StaticResource Card.Info}" 
                                LabelForeground="{StaticResource Card.Info.Label}" />

            <!-- Low Stock Items Card -->
            <controls:SummaryCard Grid.Column="4" 
                                Label="Low Stock" 
                                Value="{Binding LowStockCount}" 
                                Icon="âš ï¸" 
                                CardBackground="{StaticResource Card.Warning}" 
                                LabelForeground="{StaticResource Card.Warning.Label}" />

            <!-- Categories Card -->
            <controls:SummaryCard Grid.Column="6" 
                                Label="Categories" 
                                Value="{Binding CategoryCount}" 
                                Icon="ðŸ“‚" 
                                CardBackground="{StaticResource Card.Danger}" 
                                LabelForeground="{StaticResource Card.Danger.Label}" />

            <!-- Packaged Items Card -->
            <controls:SummaryCard Grid.Column="8" 
                                Label="Packaged" 
                                Value="{Binding PackagedItemsCount}" 
                                Icon="ðŸ“«" 
                                CardBackground="{StaticResource Card.Info}" 
                                LabelForeground="{StaticResource Card.Info.Label}" />
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="480"/>
            </Grid.ColumnDefinitions>

            <!-- Items List -->
            <Border Grid.Column="0" Margin="0,0,12,0" Style="{StaticResource FormCard}">
                <DockPanel>
                    <!-- Header -->
                    <controls:SectionHeader DockPanel.Dock="Top" 
                                          Title="All Items" 
                                          IconKind="PackageVariant" 
                                          IconBackground="{StaticResource Card.Success}" />

                    <!-- Search Box -->
                    <controls:SearchBox DockPanel.Dock="Top" PlaceholderText="Search items by name or unit..." />

                    <!-- Pagination Control -->
                    <controls:PaginationControl DockPanel.Dock="Bottom"
                        CurrentPage="{Binding CurrentPage, Mode=TwoWay}"
                        TotalPages="{Binding TotalPages}"
                        TotalRecords="{Binding TotalRecords}"
                        CanGoToPreviousPage="{Binding CanGoToPreviousPage}"
                        CanGoToNextPage="{Binding CanGoToNextPage}"
                        FirstPageCommand="{Binding GoToFirstPageCommand}"
                        PreviousPageCommand="{Binding GoToPreviousPageCommand}"
                        NextPageCommand="{Binding GoToNextPageCommand}"
                        LastPageCommand="{Binding GoToLastPageCommand}"
                        Margin="0,16,0,0"/>

                    <!-- DataGrid -->
                    <DataGrid ItemsSource="{Binding PaginatedItems}" SelectedItem="{Binding SelectedItem}" Style="{StaticResource Section.DataGrid}" KeyboardNavigation.TabNavigation="Once">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGrid.Header.Standard}"/>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ItemId}" Width="70"></DataGridTextColumn>
                            <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*"></DataGridTextColumn>
                            <DataGridTextColumn Header="Stock" Binding="{Binding CurrentStock, StringFormat=N2}" Width="100"></DataGridTextColumn>
                            <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width="80"></DataGridTextColumn>
                            <DataGridTextColumn Header="Type" Binding="{Binding StockDisplayText}" Width="140"></DataGridTextColumn>
                            <DataGridTemplateColumn Header="Actions" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Style="{StaticResource DataGrid.EditButton}"
                                                  Command="{Binding DataContext.EditItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"
                                                  ToolTip="Edit">
                                                <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16"/>
                                            </Button>
                                            <Button Style="{StaticResource DataGrid.EditButton}"
                                                  Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"
                                                  ToolTip="Delete"
                                                  Margin="4,0,0,0"
                                                  Foreground="{StaticResource DeleteButtonForeground}">
                                                <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>

            <!-- Item Form -->
            <Border Grid.Column="1" Style="{StaticResource FormCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Border Grid.Row="0" Background="{StaticResource Card.Header}" Padding="15" Margin="-24,-24,-24,20" CornerRadius="8,8,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Style="{StaticResource SectionHeader}" Margin="0">
                                <Border Style="{StaticResource IconBadge}" Background="{StaticResource Card.Success}">
                                    <materialDesign:PackIcon Kind="Package" Width="20" Height="20" 
                                                           Foreground="White" 
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                <StackPanel Style="{StaticResource SectionHeader.Content}">
                                    <TextBlock Text="{Binding IsEditMode, Converter={StaticResource EditModeToTextConverter}}" 
                                             Style="{StaticResource SectionHeader.Title}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <Button Grid.Column="1"
                                  Content="+ New"
                                  Command="{Binding NewItemCommand}"
                                  Style="{StaticResource MaterialDesignFlatButton}"
                                  Foreground="{StaticResource AccentCyan}"
                                  Height="28"
                                  Padding="12,0"
                                  FontSize="12"
                                  FontWeight="SemiBold"
                                  ToolTip="Clear the form to add a new item"/>
                        </Grid>
                    </Border>
                    
                <ScrollViewer Grid.Row="1" Style="{StaticResource Section.ScrollViewer}">
                    <StackPanel>
                            <!-- Item Name -->
                            <TextBlock Text="Item Name *" 
                                     Foreground="{StaticResource Text.Label}"
                                     FontSize="11"
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,8"/>
                            <TextBox Text="{Binding ItemName, UpdateSourceTrigger=PropertyChanged}"
                                   materialDesign:HintAssist.Hint="Enter item name (e.g., Rice, Wheat)"
                                   Style="{StaticResource TextBox.Standard}"
                                   Margin="0,0,0,20"/>

                            <!-- Unit Selection (FIRST) -->
                            <TextBlock Text="Measurement Unit *" 
                                     Foreground="{StaticResource Text.Label}"
                                     FontSize="11"
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,8"/>
                            <ComboBox Text="{Binding Unit, UpdateSourceTrigger=PropertyChanged}"
                                    IsEditable="True"
                                    materialDesign:HintAssist.Hint="Select measurement unit"
                                    Style="{StaticResource ComboBox.Standard}"
                                    Margin="0,0,0,20">
                                <ComboBoxItem Content="kg"/>
                                <ComboBoxItem Content="quintal"/>
                                <ComboBoxItem Content="ton"/>
                                <ComboBoxItem Content="bag"/>
                                <ComboBoxItem Content="pcs"/>
                                <ComboBoxItem Content="lbs"/>
                            </ComboBox>

                            <!-- Stock Entry Method Selection -->
                            <TextBlock Text="Stock Entry Method *" 
                                     Foreground="{StaticResource Text.Label}"
                                     FontSize="11"
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,12"/>
                            <Border Background="{StaticResource CardBackground}" BorderBrush="{StaticResource Card.Border}" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,0,20">
                                <StackPanel>
                                    <RadioButton Content="Loose Stock (Direct Entry)" 
                                               IsChecked="{Binding IsLooseStock}"
                                               Margin="0,0,0,10"
                                               Foreground="{StaticResource Text.Primary}"
                                               FontSize="12"/>
                                    <RadioButton Content="Packaged Stock (Bags/Containers)" 
                                               IsChecked="{Binding IsPackagedStock}"
                                               Foreground="{StaticResource Text.Primary}"
                                               FontSize="12"/>
                                </StackPanel>
                            </Border>

                            <!-- Loose Stock Entry -->
                            <StackPanel Visibility="{Binding IsLooseStock, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="Enter Quantity *" 
                                         Foreground="{StaticResource Text.Label}"
                                         FontSize="11"
                                         FontWeight="SemiBold"
                                         Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                           Text="{Binding CurrentStock, UpdateSourceTrigger=PropertyChanged}"
                                           materialDesign:HintAssist.Hint="Enter total quantity"
                                           Style="{StaticResource TextBox.Standard}"
                                           GotFocus="NumericTextBox_GotFocus"/>
                                    <TextBlock Grid.Column="1" 
                                             Text="{Binding Unit}" 
                                             VerticalAlignment="Center" 
                                             Margin="8,0,0,0"
                                             Foreground="{StaticResource Text.Secondary}"
                                             FontSize="12"
                                             FontWeight="SemiBold"/>
                                </Grid>
                                <TextBlock Text="{Binding CurrentStock, StringFormat='Total: {0:N2} kg'}" 
                                         Foreground="{StaticResource InfoColor}" 
                                         FontSize="12" 
                                         FontWeight="SemiBold"
                                         Margin="0,8,0,20"/>
                            </StackPanel>

                            <!-- Packaged Stock Entry -->
                            <StackPanel Visibility="{Binding IsPackagedStock, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="Package Distribution" 
                                         Foreground="{StaticResource Text.Label}"
                                         FontSize="11"
                                         FontWeight="SemiBold"
                                         Margin="0,0,0,12"/>

                                <!-- Package Entries List -->
                                <DataGrid ItemsSource="{Binding PackageEntries}" 
                                         AutoGenerateColumns="False"
                                         CanUserAddRows="False"
                                         Background="{StaticResource CardBackground}"
                                         Margin="0,0,0,12"
                                         BorderBrush="{StaticResource Card.Border}"
                                         BorderThickness="1"
                                         RowHeight="40"
                                         MinHeight="60">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Size (kg)" 
                                                          Binding="{Binding PackageSize, UpdateSourceTrigger=PropertyChanged}"
                                                          Width="80">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Margin" Value="4"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="{StaticResource Text.Secondary}"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                            <DataGridTextColumn.EditingElementStyle>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="Padding" Value="4"/>
                                                    <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                                                    <Setter Property="Foreground" Value="{StaticResource Text.Primary}"/>
                                                    <Setter Property="BorderBrush" Value="{StaticResource Card.Border}"/>
                                                </Style>
                                            </DataGridTextColumn.EditingElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Count" 
                                                          Binding="{Binding PackageCount, UpdateSourceTrigger=PropertyChanged}"
                                                          Width="70">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Margin" Value="4"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="{StaticResource Text.Secondary}"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                            <DataGridTextColumn.EditingElementStyle>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="Padding" Value="4"/>
                                                    <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                                                    <Setter Property="Foreground" Value="{StaticResource Text.Primary}"/>
                                                    <Setter Property="BorderBrush" Value="{StaticResource Card.Border}"/>
                                                </Style>
                                            </DataGridTextColumn.EditingElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Total" 
                                                          Binding="{Binding TotalQuantity, StringFormat='{}{0:N2}'}"
                                                          IsReadOnly="True"
                                                          Width="80">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Margin" Value="4"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="{StaticResource InfoColor}"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTemplateColumn Header="Actions" Width="50">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="âœ–" 
                                                          Command="{Binding DataContext.RemovePackageEntryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          CommandParameter="{Binding}"
                                                          Width="30" Height="24"
                                                          FontSize="11"
                                                          Padding="0"
                                                          Style="{StaticResource Button.Danger}"
                                                          VerticalAlignment="Center"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Add Package Button -->
                                <Button Content="+ Add Package Type" 
                                       Command="{Binding AddPackageEntryCommand}"
                                       Style="{StaticResource MaterialDesignFlatButton}"
                                       Foreground="{StaticResource InfoColor}"
                                       HorizontalAlignment="Left"
                                       Height="30"
                                       Padding="12,0"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,16"/>

                                <!-- Total Stock Display -->
                                <Border Background="{StaticResource ElevatedBackground}" BorderBrush="{StaticResource InfoColor}" BorderThickness="2" CornerRadius="4" Padding="12" Margin="0,0,0,20">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                 Text="Total Stock:" 
                                                 FontWeight="SemiBold" 
                                                 FontSize="13"
                                                 Foreground="{StaticResource InfoColor}"/>
                                        <TextBlock Grid.Column="1" 
                                                 Text="{Binding CalculatedTotalStock, StringFormat='{}{0:N2} kg'}" 
                                                 FontWeight="SemiBold" 
                                                 FontSize="13"
                                                 Foreground="{StaticResource InfoColor}"
                                                 HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <!-- Error Message -->
                            <Border Style="{StaticResource InfoBox}" 
                                    Background="{StaticResource DeleteButtonBackground}"
                                    BorderBrush="{StaticResource Card.Danger}"
                                    Visibility="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"
                                    Margin="0,0,0,16">
                                <TextBlock Text="{Binding ErrorMessage}"
                                         Foreground="{StaticResource ErrorColor}"
                                         TextWrapping="Wrap"/>
                            </Border>

                            <!-- Action Buttons -->
                            <Button Content="SAVE ITEM"
                                  Command="{Binding SaveItemCommand}"
                                  Style="{StaticResource Button.Success}"
                                  HorizontalAlignment="Stretch"
                                  Height="44"
                                  FontSize="13"
                                  FontWeight="SemiBold"
                                  ToolTip="Save item with stock distribution"/>
                    </StackPanel>
                </ScrollViewer>
                </Grid>
            </Border>

            <!-- Loading Overlay -->
            <Grid Grid.ColumnSpan="2" Background="{StaticResource ShadowColor}" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                           Value="0"
                           IsIndeterminate="True"
                           Width="50" Height="50"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

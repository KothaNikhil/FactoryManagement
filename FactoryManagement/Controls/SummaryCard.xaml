<UserControl x:Class="FactoryManagement.Controls.SummaryCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="{Binding CardBackground, RelativeSource={RelativeSource AncestorType=UserControl}}" 
            Style="{StaticResource SummaryCard}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                     Text="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                     FontSize="{StaticResource FontSize.Icon.ExtraLarge}" 
                     VerticalAlignment="Center" 
                     Margin="0,0,12,0"/>
            
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                         Foreground="{Binding LabelForeground, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                         FontSize="{StaticResource FontSize.Small}" 
                         Margin="0,0,0,4"/>
                <TextBlock Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                         Foreground="White" 
                         FontSize="{StaticResource FontSize.Amount}" 
                         FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

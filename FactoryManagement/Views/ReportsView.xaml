<UserControl x:Class="FactoryManagement.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Summary Cards -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Amount Card -->
                <Border Grid.Column="0" Background="{StaticResource Card.Success}" Style="{StaticResource SummaryCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="ðŸ’°" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Total Amount" Foreground="{StaticResource Card.Success.Label}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding TotalAmount, StringFormat='â‚¹{0:N2}'}" 
                                       Foreground="White" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Total Transactions Card -->
                <Border Grid.Column="2" Background="{StaticResource Card.Info}" Style="{StaticResource SummaryCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="ðŸ“Š" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Total Transactions" Foreground="{StaticResource Card.Info.Label}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding CurrentTransactions.Count, FallbackValue=0}" 
                                       Foreground="White" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Average Transaction Card -->
                <Border Grid.Column="4" Background="{StaticResource Card.Warning}" Style="{StaticResource SummaryCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="ðŸ“ˆ" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Avg Transaction" Foreground="{StaticResource Card.Warning.Label}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding AverageAmount, StringFormat='â‚¹{0:N2}'}" 
                                       Foreground="White" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Date Range Card -->
                <Border Grid.Column="6" Background="{StaticResource Card.Danger}" Style="{StaticResource SummaryCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="ðŸ“…" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Date Range" Foreground="{StaticResource Card.Danger.Label}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding DateRangeText, FallbackValue='All Time'}" 
                                       Foreground="White" FontSize="14" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Filter Panel -->
            <Border Grid.Row="1" Style="{StaticResource FormCard}" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Style="{StaticResource SectionHeader.Prominent}">
                        <StackPanel Style="{StaticResource SectionHeader}" Margin="0">
                        <Border Background="{StaticResource Button.Info}" Style="{StaticResource IconBadge}">
                            <TextBlock Text="ðŸ”" FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Style="{StaticResource SectionHeader.Content}">
                            <TextBlock Text="Filter Reports" Style="{StaticResource SectionHeader.Title}"/>
                            <TextBlock Text="Select criteria to generate custom reports" Style="{StaticResource SectionHeader.Subtitle}"/>
                        </StackPanel>
                    </StackPanel>
                    </Border>

                    <!-- Filters -->
                    <Grid Grid.Row="1" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <!-- Report Type -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Report Type" Foreground="{StaticResource Text.Label}" FontSize="11" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding ReportTypes}"
                                    SelectedItem="{Binding SelectedReportType}"
                                    Style="{StaticResource ComboBox.Standard}"/>
                        </StackPanel>

                        <!-- Inventory Filters -->
                        <StackPanel Grid.Column="2" Visibility="{Binding IsInventoryView, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Filter by Item" Foreground="{StaticResource Text.Label}" FontSize="11" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding Items}"
                                    SelectedItem="{Binding SelectedItem, UpdateSourceTrigger=PropertyChanged}"
                                    DisplayMemberPath="ItemName"
                                    Style="{StaticResource ComboBox.Standard}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4" Visibility="{Binding IsInventoryView, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Filter by Party" Foreground="{StaticResource Text.Label}" FontSize="11" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding Parties}"
                                    SelectedItem="{Binding SelectedParty, UpdateSourceTrigger=PropertyChanged}"
                                    DisplayMemberPath="Name"
                                    Style="{StaticResource ComboBox.Standard}"/>
                        </StackPanel>

                        <!-- Financial Filters -->
                        <StackPanel Grid.Column="2" Visibility="{Binding IsFinancialView, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Filter by Party" Foreground="{StaticResource Text.Label}" FontSize="11" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding Parties}"
                                    SelectedItem="{Binding SelectedParty, UpdateSourceTrigger=PropertyChanged}"
                                    DisplayMemberPath="Name"
                                    Style="{StaticResource ComboBox.Standard}"/>
                        </StackPanel>

                        <!-- Wages Filters -->
                        <StackPanel Grid.Column="2" Visibility="{Binding IsWagesView, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Filter by Worker" Foreground="{StaticResource Text.Label}" FontSize="11" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding Workers}"
                                    SelectedItem="{Binding SelectedWorker, UpdateSourceTrigger=PropertyChanged}"
                                    DisplayMemberPath="Name"
                                    Style="{StaticResource ComboBox.Standard}"/>
                        </StackPanel>

                        <!-- Start Date (visible for Inventory, Financial, Wages - not All) -->
                        <StackPanel Grid.Column="6" Visibility="{Binding IsAllView, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="" Height="19" Margin="0,0,0,8"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="6">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsAllView}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="Start Date" Foreground="{StaticResource Text.Label}" FontSize="11" Margin="0,0,0,8"/>
                            <DatePicker SelectedDate="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource DatePicker.Standard}"/>
                        </StackPanel>

                        <!-- End Date -->
                        <StackPanel Grid.Column="8">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsAllView}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="End Date" Foreground="{StaticResource Text.Label}" FontSize="11" Margin="0,0,0,8"/>
                            <DatePicker SelectedDate="{Binding EndDate, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource DatePicker.Standard}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Action Buttons -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button Content="CLEAR FILTERS" 
                                  Command="{Binding ClearFiltersCommand}"
                                  Margin="0,0,0,0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource Button.Secondary}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAllView}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Command="{Binding ExportToExcelCommand}"
                                  Style="{StaticResource Button.Secondary}"
                                  Padding="16,0"
                                  Margin="0,0,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FileExcel" Width="18" Height="18" Margin="0,0,6,0"/>
                                    <TextBlock Text="Excel"/>
                                </StackPanel>
                            </Button>

                            <Button Command="{Binding ExportToCsvCommand}"
                                  Style="{StaticResource Button.Secondary}"
                                  Padding="16,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FileDelimited" Width="18" Height="18" Margin="0,0,6,0"/>
                                    <TextBlock Text="CSV"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Results Table -->
            <Border Grid.Row="2" Style="{StaticResource FormCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Style="{StaticResource SectionHeader.Prominent}">
                        <StackPanel Style="{StaticResource SectionHeader}" Margin="0">
                            <Border Background="{StaticResource Card.Success}" Style="{StaticResource IconBadge}">
                                <TextBlock Text="ðŸ“‹" FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Style="{StaticResource SectionHeader.Content}">
                                <TextBlock Text="Report Results" Style="{StaticResource SectionHeader.Title}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- All Categories DataGrid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding AllTransactions}" Style="{StaticResource DataGrid.Standard}" 
                              Visibility="{Binding IsAllView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGrid.Header.Standard}"/>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="100"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat=dd-MMM-yyyy}" Width="110"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TransactionType, Converter={StaticResource EnumToFriendlyStringConverter}}" Width="120"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            <DataGridTextColumn Header="Details" Binding="{Binding AdditionalInfo}" Width="*"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat='â‚¹{0:N2}'}" Width="130">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Inventory DataGrid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Transactions}" Style="{StaticResource DataGrid.Standard}" 
                              Visibility="{Binding IsInventoryView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGrid.Header.Standard}"/>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat=dd-MMM-yyyy}" Width="110"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TransactionType, Converter={StaticResource EnumToFriendlyStringConverter}}" Width="120"/>
                            <DataGridTextColumn Header="Item" Binding="{Binding Item.ItemName}" Width="*"/>
                            <DataGridTextColumn Header="Party" Binding="{Binding Party.Name}" Width="*"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity, StringFormat=N2}" Width="100"/>
                            <DataGridTextColumn Header="Price/Unit" Binding="{Binding PricePerUnit, StringFormat='â‚¹{0:N2}'}" Width="110"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding TotalAmount, StringFormat='â‚¹{0:N2}'}" Width="130">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Financial DataGrid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding FinancialTransactions}" Style="{StaticResource DataGrid.Standard}" 
                              Visibility="{Binding IsFinancialView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGrid.Header.Standard}"/>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat=dd-MMM-yyyy}" Width="110"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TransactionType, Converter={StaticResource EnumToFriendlyStringConverter}}" Width="140"/>
                            <DataGridTextColumn Header="Party" Binding="{Binding Party.Name}" Width="*"/>
                            <DataGridTextColumn Header="Interest Rate" Binding="{Binding InterestRate, StringFormat='{}{0:N2}%'}" Width="110"/>
                            <DataGridTextColumn Header="Interest Amt" Binding="{Binding InterestAmount, StringFormat='â‚¹{0:N2}'}" Width="120"/>
                            <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat=dd-MMM-yyyy}" Width="110"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat='â‚¹{0:N2}'}" Width="130">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Wages DataGrid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding WageTransactions}" Style="{StaticResource DataGrid.Standard}" 
                              Visibility="{Binding IsWagesView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGrid.Header.Standard}"/>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat=dd-MMM-yyyy}" Width="110"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TransactionType, Converter={StaticResource EnumToFriendlyStringConverter}}" Width="140"/>
                            <DataGridTextColumn Header="Worker" Binding="{Binding Worker.Name}" Width="*"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding NetAmount, StringFormat='â‚¹{0:N2}'}" Width="130">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Loading Overlay -->
            <Border Grid.RowSpan="3" Background="#CC000000" 
                    Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="250" Height="6" Foreground="{StaticResource Card.Info}"/>
                    <TextBlock Text="Loading..." Foreground="White" FontSize="18" Margin="0,15,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>

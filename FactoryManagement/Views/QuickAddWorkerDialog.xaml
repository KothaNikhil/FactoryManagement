<Window x:Class="FactoryManagement.Views.QuickAddWorkerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Worker" 
        SizeToContent="Height"
        Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1e1e1e"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Border BorderBrush="#444" BorderThickness="1" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock x:Name="TitleTextBlock"
                           Text="ðŸ‘· Add New Worker" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <Border Height="3" Background="#3d8b5f" CornerRadius="2" Margin="0,10,0,0" HorizontalAlignment="Left" Width="100"/>
            </StackPanel>

            <!-- Form -->
            <StackPanel Grid.Row="1">
                <!-- Worker Name -->
                <TextBlock Text="Worker Name *" 
                         Foreground="#AAA" 
                         FontSize="13"
                         Margin="0,0,0,8"/>
                <TextBox x:Name="WorkerNameTextBox"
                       materialDesign:HintAssist.Hint="Enter worker name"
                       Style="{StaticResource TextBox.Standard}"
                       Foreground="White"
                       Margin="0,0,0,18"/>

                <!-- Mobile Number -->
                <TextBlock Text="Mobile Number" 
                         Foreground="#AAA" 
                         FontSize="13"
                         Margin="0,0,0,8"/>
                <TextBox x:Name="MobileNumberTextBox"
                       materialDesign:HintAssist.Hint="Enter mobile number (optional)"
                       Style="{StaticResource TextBox.Standard}"
                       Foreground="White"
                       Margin="0,0,0,18"/>

                <!-- Error Message -->
                <TextBlock x:Name="ErrorTextBlock"
                         Foreground="#ff6b6b"
                         TextWrapping="Wrap"
                         Margin="0,0,0,10"
                         Visibility="Collapsed"/>
            </StackPanel>

            <!-- Action Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="CANCEL"
                        Click="CancelButton_Click"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Foreground="White"
                        BorderBrush="#666"
                        Height="44"
                        FontSize="14"
                        FontWeight="SemiBold"/>
                
                <Button Grid.Column="2"
                        x:Name="AddWorkerButton"
                        Content="ADD WORKER"
                        Click="AddWorkerButton_Click"
                        Background="#3d8b5f"
                        Foreground="White"
                        Height="44"
                        FontSize="14"
                        FontWeight="Bold"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
            </Grid>
        </Grid>
    </Border>
</Window>

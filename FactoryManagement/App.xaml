<Application x:Class="FactoryManagement.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:FactoryManagement.Converters"
             xmlns:viewmodels="clr-namespace:FactoryManagement.ViewModels"
             xmlns:System="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Cyan" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="Themes/DarkTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Enable Smooth Animations -->
            <Duration x:Key="MaterialDesignTransitionDuration">0:0:0.3</Duration>
            <System:Boolean x:Key="MaterialDesignDisableTransitions">False</System:Boolean>
            
            <!-- Modern Gradient Brushes -->
            <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="1"/>
            </LinearGradientBrush>
            
            <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#11998e" Offset="0"/>
                <GradientStop Color="#38ef7d" Offset="1"/>
            </LinearGradientBrush>
            
            <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#eb3349" Offset="0"/>
                <GradientStop Color="#f45c43" Offset="1"/>
            </LinearGradientBrush>
            
            <LinearGradientBrush x:Key="InfoGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#4facfe" Offset="0"/>
                <GradientStop Color="#00f2fe" Offset="1"/>
            </LinearGradientBrush>
            
            <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0f0c29" Offset="0"/>
                <GradientStop Color="#302b63" Offset="0.5"/>
                <GradientStop Color="#24243e" Offset="1"/>
            </LinearGradientBrush>
            
            <!-- Modern Color Palette -->
            <SolidColorBrush x:Key="PrimaryPurple" Color="#667eea"/>
            <SolidColorBrush x:Key="PrimaryPurpleLight" Color="#9f7aea"/>
            <SolidColorBrush x:Key="PrimaryPurpleDark" Color="#553c9a"/>
            <SolidColorBrush x:Key="AccentCyan" Color="#00f2fe"/>
            <SolidColorBrush x:Key="BackgroundDark" Color="#0f172a"/> <!-- default row background -->
            <SolidColorBrush x:Key="SurfaceDark" Color="#1e293b"/> <!-- alternate row background -->
            <SolidColorBrush x:Key="SurfaceLight" Color="#334155"/> <!-- hover background -->
            <SolidColorBrush x:Key="HeaderBackground" Color="#374151"/>
            <SolidColorBrush x:Key="HeaderText" Color="#f3f4f6"/>
            <SolidColorBrush x:Key="RowText" Color="#cbd5e1"/>
            <SolidColorBrush x:Key="MutedText" Color="#94a3b8"/>
            <SolidColorBrush x:Key="TextSecondary" Color="#94a3b8"/> <!-- alias for MutedText -->
            <SolidColorBrush x:Key="LinkText" Color="#60a5fa"/>
            <SolidColorBrush x:Key="SuccessColor" Color="#10b981"/> <!-- emerald -->
            <SolidColorBrush x:Key="DangerColor" Color="#ef4444"/> <!-- red -->
            <SolidColorBrush x:Key="WarningColor" Color="#f59e0b"/> <!-- amber -->
            <SolidColorBrush x:Key="InfoColor" Color="#60a5fa"/> <!-- soft blue -->
            
            <!-- Modern Card Style with Glass Morphism -->
            <Style x:Key="ModernCard" TargetType="materialDesign:Card" BasedOn="{StaticResource {x:Type materialDesign:Card}}">
                <Setter Property="UniformCornerRadius" Value="16"/>
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
                <Setter Property="Margin" Value="12"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="#16213e" Opacity="0.8"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp8"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- Animated Gradient Card -->
            <Style x:Key="GradientCard" TargetType="materialDesign:Card" BasedOn="{StaticResource ModernCard}">
                <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
                <Style.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(materialDesign:ElevationAssist.Elevation)" 
                                               To="16" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(materialDesign:ElevationAssist.Elevation)" 
                                               To="4" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Style.Triggers>
            </Style>
            
            <!-- Modern Button Style -->
            <Style x:Key="ModernButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="Height" Value="44"/>
                <Setter Property="Padding" Value="24,0"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.9"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- Converters -->
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibilityConverter"/>
            <converters:EditModeToTextConverter x:Key="EditModeToTextConverter"/>
            <converters:TransactionTypeConverter x:Key="TransactionTypeConverter"/>
            <converters:BoolToTextConverter x:Key="BoolToTextConverter"/>
            <converters:EnumVisibilityConverter x:Key="EnumVisibilityConverter"/>
            <converters:WageTransactionTypeConverter x:Key="WageTransactionTypeConverter"/>
            <converters:StockBarWidthConverter x:Key="StockBarWidthConverter"/>
            <converters:StockLevelColorConverter x:Key="StockLevelColorConverter"/>
            <converters:StockToRectConverter x:Key="StockToRectConverter"/>
            <converters:TransactionBarHeightConverter x:Key="TransactionBarHeightConverter"/>
            <converters:TransactionBarHeightConverter2 x:Key="TransactionBarHeightConverter2"/>
            <converters:TransactionBarHeightConverter3 x:Key="TransactionBarHeightConverter3"/>
            <converters:LoanBarHeightConverter x:Key="LoanBarHeightConverter"/>
            <converters:LoanBarHeightConverter2 x:Key="LoanBarHeightConverter2"/>
            <converters:WageBarHeightConverter x:Key="WageBarHeightConverter"/>
            <converters:WageBarHeightConverter2 x:Key="WageBarHeightConverter2"/>
            
            <!-- Enhanced DataGrid Styles aligned with dark theme suggestions -->
            <Style x:Key="EnhancedDataGrid" TargetType="DataGrid" BasedOn="{StaticResource MaterialDesignDataGrid}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="RowBackground" Value="{StaticResource BackgroundDark}"/>
                <Setter Property="AlternatingRowBackground" Value="{StaticResource SurfaceDark}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="GridLinesVisibility" Value="None"/>
                <Setter Property="HeadersVisibility" Value="Column"/>
                <Setter Property="CanUserAddRows" Value="False"/>
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="IsReadOnly" Value="True"/>
            </Style>
            
            <Style x:Key="EnhancedDataGridColumnHeader" TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                <Setter Property="Background" Value="{StaticResource HeaderBackground}"/>
                <Setter Property="Foreground" Value="{StaticResource HeaderText}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                <Setter Property="BorderBrush" Value="{StaticResource SurfaceLight}"/>
            </Style>
            
            <Style x:Key="EnhancedDataGridRow" TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                <Setter Property="Foreground" Value="{StaticResource RowText}"/>
                <Setter Property="Height" Value="42"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource SurfaceLight}"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#2d3548"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <Style x:Key="EnhancedDataGridCell" TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="10,0"/>
                <Setter Property="Foreground" Value="{StaticResource RowText}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderThickness="0" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <!-- Converters for theme-aware bindings -->
            <converters:AmountToBrushConverter x:Key="AmountToBrushConverter"/>
            <converters:StockLevelPercentConverter x:Key="StockLevelPercentConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>

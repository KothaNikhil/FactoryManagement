<Window x:Class="FactoryManagement.Views.QuickAddPartyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Quick Add Party" 
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Add New Party" 
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,24"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Party Name -->
                <TextBlock Text="Party Name *" 
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         Margin="0,0,0,8"/>
                <TextBox x:Name="PartyNameTextBox"
                       materialDesign:HintAssist.Hint="Enter party name"
                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                       Margin="0,0,0,20"/>

                <!-- Mobile Number -->
                <TextBlock Text="Mobile Number" 
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         Margin="0,0,0,8"/>
                <TextBox x:Name="MobileNumberTextBox"
                       materialDesign:HintAssist.Hint="Enter mobile number (optional)"
                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                       Margin="0,0,0,20"/>

                <!-- Place -->
                <TextBlock Text="Place" 
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         Margin="0,0,0,8"/>
                <TextBox x:Name="PlaceTextBox"
                       materialDesign:HintAssist.Hint="Enter place/location (optional)"
                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                       Margin="0,0,0,20"/>

                <!-- Party Type -->
                <TextBlock Text="Party Type *" 
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         Margin="0,0,0,8"/>
                <ComboBox x:Name="PartyTypeComboBox"
                        materialDesign:HintAssist.Hint="Select party type"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        Margin="0,0,0,20"
                        SelectedIndex="0">
                    <ComboBoxItem Content="Buyer"/>
                    <ComboBoxItem Content="Seller"/>
                    <ComboBoxItem Content="Both"/>
                </ComboBox>

                <!-- Error Message -->
                <TextBlock x:Name="ErrorTextBlock"
                         Foreground="#EF5350"
                         TextWrapping="Wrap"
                         Margin="0,0,0,16"
                         Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,24,0,0">
            <Button Content="CANCEL"
                  Style="{StaticResource MaterialDesignOutlinedButton}"
                  Click="CancelButton_Click"
                  Margin="0,0,16,0"
                  Padding="24,8"/>
            <Button Content="ADD PARTY"
                  Style="{StaticResource MaterialDesignRaisedButton}"
                  Click="AddPartyButton_Click"
                  Padding="24,8"/>
        </StackPanel>
    </Grid>
</Window>

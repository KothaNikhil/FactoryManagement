<UserControl x:Class="FactoryManagement.Controls.PaginationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Border Background="{StaticResource Card.Background}" 
            BorderBrush="{StaticResource Border.Default}" 
            BorderThickness="0,1,0,0" 
            Padding="16,12">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Record Count Info -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Showing " Foreground="{StaticResource Text.Secondary}" FontSize="{StaticResource FontSize.Regular}"/>
                <TextBlock Text="{Binding TotalRecords, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           FontWeight="SemiBold" 
                           Foreground="{StaticResource Text.Primary}" 
                           FontSize="{StaticResource FontSize.Regular}" 
                           Margin="0,0,4,0"/>
                <TextBlock Text="records" Foreground="{StaticResource Text.Secondary}" FontSize="{StaticResource FontSize.Regular}"/>
            </StackPanel>

            <!-- Page Navigation -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- First Page Button -->
                <Button Command="{Binding FirstPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        IsEnabled="{Binding CanGoToPreviousPage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource Button.Icon}"
                        Foreground="{StaticResource Text.Primary}"
                        ToolTip="First Page"
                        Width="32" Height="32"
                        Margin="0,0,4,0">
                    <materialDesign:PackIcon Kind="PageFirst" Width="18" Height="18"/>
                </Button>

                <!-- Previous Page Button -->
                <Button Command="{Binding PreviousPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        IsEnabled="{Binding CanGoToPreviousPage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource Button.Icon}"
                        Foreground="{StaticResource Text.Primary}"
                        ToolTip="Previous Page"
                        Width="32" Height="32"
                        Margin="0,0,4,0">
                    <materialDesign:PackIcon Kind="ChevronLeft" Width="18" Height="18"/>
                </Button>

                <!-- Page Number Display -->
                <Border Background="{StaticResource SecondaryBackground}" 
                        BorderBrush="{StaticResource Border.Default}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12,6"
                        Margin="0,0,4,0">
                    <TextBlock VerticalAlignment="Center" Foreground="{StaticResource Text.Primary}" FontSize="{StaticResource FontSize.Regular}">
                        <Run Text="Page "/>
                        <Run Text="{Binding CurrentPage, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}" FontWeight="SemiBold"/>
                        <Run Text=" of "/>
                        <Run Text="{Binding TotalPages, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}" FontWeight="SemiBold"/>
                    </TextBlock>
                </Border>

                <!-- Next Page Button -->
                <Button Command="{Binding NextPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        IsEnabled="{Binding CanGoToNextPage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource Button.Icon}"
                        Foreground="{StaticResource Text.Primary}"
                        ToolTip="Next Page"
                        Width="32" Height="32"
                        Margin="0,0,4,0">
                    <materialDesign:PackIcon Kind="ChevronRight" Width="18" Height="18"/>
                </Button>

                <!-- Last Page Button -->
                <Button Command="{Binding LastPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        IsEnabled="{Binding CanGoToNextPage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource Button.Icon}"
                        Foreground="{StaticResource Text.Primary}"
                        ToolTip="Last Page"
                        Width="32" Height="32">
                    <materialDesign:PackIcon Kind="PageLast" Width="18" Height="18"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

<UserControl x:Class="FactoryManagement.Views.PartiesManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Summary Cards -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Parties Card -->
            <Border Grid.Column="0" Style="{StaticResource SummaryCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="ðŸ‘¥" FontSize="32" Margin="0,0,0,12"/>
                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                        <TextBlock Text="{Binding TotalParties}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource Text.Primary}"/>
                        <TextBlock Text="Total Parties" FontSize="11" Foreground="#ADD8E6" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Active Parties Card -->
            <Border Grid.Column="2" Style="{StaticResource SummaryCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="âœ…" FontSize="32" Margin="0,0,0,12"/>
                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                        <TextBlock Text="{Binding ActiveParties}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource Text.Primary}"/>
                        <TextBlock Text="Active Parties" FontSize="11" Foreground="#90EE90" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Outstanding Balance Card -->
            <Border Grid.Column="4" Style="{StaticResource SummaryCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="ðŸ’¸" FontSize="32" Margin="0,0,0,12"/>
                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                        <TextBlock Text="{Binding OutstandingBalance, StringFormat='â‚¹{0:N2}'}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource Text.Primary}"/>
                        <TextBlock Text="Outstanding" FontSize="11" Foreground="#FFB6C1" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Recent Activity Card -->
            <Border Grid.Column="6" Style="{StaticResource SummaryCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="ðŸ“Š" FontSize="32" Margin="0,0,0,12"/>
                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                        <TextBlock Text="{Binding RecentActivityCount}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource Text.Primary}"/>
                        <TextBlock Text="Recent Activity" FontSize="11" Foreground="#FFEAA7" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="500"/>
            </Grid.ColumnDefinitions>

            <!-- Parties List -->
            <Border Grid.Column="0" Margin="0,0,12,0" Style="{StaticResource FormCard}">
                <DockPanel>
                    <!-- Header -->
                    <Border DockPanel.Dock="Top" Style="{StaticResource SectionHeader.Border}">
                        <StackPanel Orientation="Horizontal">
                            <Border Style="{StaticResource IconBadge}" Background="{StaticResource Card.Info}">
                                <materialDesign:PackIcon Kind="AccountGroup" Width="20" Height="20" 
                                                       Foreground="White" 
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="All Parties" 
                                     FontSize="18" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource Text.Primary}"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Search Box -->
                    <Border DockPanel.Dock="Top" 
                            Background="{StaticResource Card.Header}"
                            CornerRadius="8"
                            Padding="12,8"
                            Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="Magnify" 
                                                   Foreground="{StaticResource Text.Secondary}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBox Grid.Column="1"
                                   Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                   materialDesign:HintAssist.Hint="Search parties by name, mobile, or place..."
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   Margin="0,0,0,0"
                                   FontSize="14"/>
                        </Grid>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid ItemsSource="{Binding Parties}" Style="{StaticResource DataGrid.Dark}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGrid.Header.Standard}"/>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Actions" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Style="{StaticResource DataGrid.EditButton}"
                                                    Command="{Binding DataContext.EditPartyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Edit party">
                                                <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16"/>
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    Command="{Binding DataContext.DeletePartyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Delete party">
                                                <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Place" Binding="{Binding Place}" Width="120"/>
                            <DataGridTextColumn Header="Mobile" Binding="{Binding MobileNumber}" Width="120"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding PartyType}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>

            <!-- Party Form -->
            <Border Grid.Column="1" Style="{StaticResource FormCard}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Header -->
                        <Border DockPanel.Dock="Top" Style="{StaticResource SectionHeader.Border}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <Border Style="{StaticResource IconBadge}" Background="{StaticResource Card.Info}">
                                        <materialDesign:PackIcon Kind="AccountEdit" Width="20" Height="20" 
                                                               Foreground="White" 
                                                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="{Binding IsEditMode, Converter={StaticResource EditModeToTextConverter}}" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource Text.Primary}"
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <Button Grid.Column="1"
                                      Content="+ New"
                                      Command="{Binding NewPartyCommand}"
                                      Style="{StaticResource MaterialDesignFlatButton}"
                                      Foreground="{StaticResource AccentCyan}"
                                      Height="28"
                                      Padding="12,0"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      ToolTip="Clear the form to add a new party"/>
                            </Grid>
                        </Border>

                        <StackPanel Margin="0,20,0,0">
                            <!-- Party Name -->
                            <TextBlock Text="Party Name *" 
                                     Foreground="{StaticResource Text.Label}"
                                     FontSize="11"
                                     Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                   materialDesign:HintAssist.Hint="Enter party name"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   Margin="0,0,0,20"/>

                            <!-- Mobile Number -->
                            <TextBlock Text="Mobile Number" 
                                     Foreground="{StaticResource Text.Label}"
                                     FontSize="11"
                                     Margin="0,0,0,8"/>
                            <TextBox Text="{Binding MobileNumber, UpdateSourceTrigger=PropertyChanged}"
                                   materialDesign:HintAssist.Hint="Enter mobile number"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   Margin="0,0,0,20"/>

                            <!-- Place -->
                            <TextBlock Text="Place" 
                                     Foreground="{StaticResource Text.Label}"
                                     FontSize="11"
                                     Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Place, UpdateSourceTrigger=PropertyChanged}"
                                   materialDesign:HintAssist.Hint="Enter place/location"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   Margin="0,0,0,20"/>

                            <!-- Party Type -->
                            <TextBlock Text="Party Type *" 
                                     Foreground="{StaticResource Text.Label}"
                                     FontSize="11"
                                     Margin="0,0,0,8"/>
                            <ComboBox SelectedIndex="{Binding PartyType}"
                                    materialDesign:HintAssist.Hint="Select party type"
                                    Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                    Margin="0,0,0,20">
                                <ComboBoxItem Content="Buyer"/>
                                <ComboBoxItem Content="Seller"/>
                                <ComboBoxItem Content="Both"/>
                            </ComboBox>

                            <!-- Error Message -->
                            <Border Style="{StaticResource InfoBox}" 
                                    Background="#3a2020"
                                    BorderBrush="{StaticResource Card.Danger}"
                                    Visibility="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"
                                    Margin="0,0,0,16">
                                <TextBlock Text="{Binding ErrorMessage}"
                                         Foreground="#EF5350"
                                         TextWrapping="Wrap"/>
                            </Border>

                            <!-- Action Buttons -->
                            <Button Content="SAVE PARTY"
                                  Command="{Binding SavePartyCommand}"
                                  Style="{StaticResource Button.Success}"
                                  HorizontalAlignment="Stretch"
                                  Height="44"
                                  FontSize="13"
                                  FontWeight="SemiBold"
                                  ToolTip="Save this party to the database. Name and Party Type are required fields"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Loading Overlay -->
            <Grid Grid.ColumnSpan="2" Background="#80000000" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                           Value="0"
                           IsIndeterminate="True"
                           Width="50" Height="50"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

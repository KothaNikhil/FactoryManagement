<UserControl x:Class="FactoryManagement.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:behaviors="clr-namespace:FactoryManagement.Behaviors"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Filter Panel -->
            <Border Grid.Row="0" Style="{StaticResource FormCard}" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Style="{StaticResource SectionHeader.Prominent}">
                        <StackPanel Style="{StaticResource SectionHeader}" Margin="0">
                        <Border Background="{StaticResource Button.Info}" Style="{StaticResource IconBadge}">
                            <TextBlock Text="ðŸ”" FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Style="{StaticResource SectionHeader.Content}">
                            <TextBlock Text="Filter Reports" Style="{StaticResource SectionHeader.Title}"/>
                            <TextBlock Text="Select criteria to generate custom reports" Style="{StaticResource SectionHeader.Subtitle}"/>
                        </StackPanel>
                    </StackPanel>
                    </Border>

                    <!-- Filters -->
                    <Grid Grid.Row="1" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <!-- Report Type -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Report Type" Foreground="{StaticResource Text.Label}" FontSize="11" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding ReportTypes}"
                                    SelectedItem="{Binding SelectedReportType, Mode=TwoWay}"
                                    Style="{StaticResource ComboBox.Standard}"/>
                        </StackPanel>

                        <!-- Inventory Filters -->
                        <StackPanel Grid.Column="2" Visibility="{Binding IsInventoryView, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Filter by Item" Foreground="{StaticResource Text.Label}" FontSize="11" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding Items}"
                                    SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                    DisplayMemberPath="ItemName"
                                    Style="{StaticResource ComboBox.Standard}">
                                <i:Interaction.Behaviors>
                                    <behaviors:SearchableComboBoxBehavior DisplayMemberPath="ItemName"/>
                                </i:Interaction.Behaviors>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="4" Visibility="{Binding IsInventoryView, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Filter by Party" Foreground="{StaticResource Text.Label}" FontSize="11" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding Parties}"
                                    SelectedItem="{Binding SelectedParty, Mode=TwoWay}"
                                    DisplayMemberPath="Name"
                                    Style="{StaticResource ComboBox.Standard}">
                                <i:Interaction.Behaviors>
                                    <behaviors:SearchableComboBoxBehavior DisplayMemberPath="Name"/>
                                </i:Interaction.Behaviors>
                            </ComboBox>
                        </StackPanel>

                        <!-- Unified Name Filter (searchable) -->
                        <StackPanel Grid.Column="4">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsInventoryView}" Value="False">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="Filter by Name" Foreground="{StaticResource Text.Label}" FontSize="11" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding AllNames}"
                                    SelectedItem="{Binding SelectedName, Mode=TwoWay}"
                                    IsEditable="True"
                                    IsTextSearchEnabled="True"
                                    Style="{StaticResource ComboBox.Standard}">
                                <i:Interaction.Behaviors>
                                    <behaviors:SearchableComboBoxBehavior/>
                                </i:Interaction.Behaviors>
                            </ComboBox>
                        </StackPanel>

                        <!-- Financial Filters -->
                        <StackPanel Grid.Column="2" Visibility="{Binding IsFinancialView, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Filter by Party" Foreground="{StaticResource Text.Label}" FontSize="11" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding Parties}"
                                    SelectedItem="{Binding SelectedParty, Mode=TwoWay}"
                                    DisplayMemberPath="Name"
                                    Style="{StaticResource ComboBox.Standard}">
                                <i:Interaction.Behaviors>
                                    <behaviors:SearchableComboBoxBehavior DisplayMemberPath="Name"/>
                                </i:Interaction.Behaviors>
                            </ComboBox>
                        </StackPanel>

                        <!-- Wages Filters -->
                        <StackPanel Grid.Column="2" Visibility="{Binding IsWagesView, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Filter by Worker" Foreground="{StaticResource Text.Label}" FontSize="11" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding Workers}"
                                    SelectedItem="{Binding SelectedWorker, Mode=TwoWay}"
                                    DisplayMemberPath="Name"
                                    Style="{StaticResource ComboBox.Standard}">
                                <i:Interaction.Behaviors>
                                    <behaviors:SearchableComboBoxBehavior DisplayMemberPath="Name"/>
                                </i:Interaction.Behaviors>
                            </ComboBox>
                        </StackPanel>

                        <!-- Start Date -->
                        <StackPanel Grid.Column="6">
                            <TextBlock Text="Start Date" Foreground="{StaticResource Text.Label}" FontSize="11" Margin="0,0,0,8"/>
                            <DatePicker SelectedDate="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource DatePicker.Standard}"/>
                        </StackPanel>

                        <!-- End Date -->
                        <StackPanel Grid.Column="8">
                            <TextBlock Text="End Date" Foreground="{StaticResource Text.Label}" FontSize="11" Margin="0,0,0,8"/>
                            <DatePicker SelectedDate="{Binding EndDate, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource DatePicker.Standard}"/>
                        </StackPanel>

                        <!-- Entered By User Filter -->
                        <StackPanel Grid.Column="10">
                            <TextBlock Text="Entered By" Foreground="{StaticResource Text.Label}" FontSize="11" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding Users}"
                                    SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                                    DisplayMemberPath="Username"
                                    Style="{StaticResource ComboBox.Standard}">
                                <i:Interaction.Behaviors>
                                    <behaviors:SearchableComboBoxBehavior DisplayMemberPath="Username"/>
                                </i:Interaction.Behaviors>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Action Buttons -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button Content="CLEAR FILTERS" 
                                  Command="{Binding ClearFiltersCommand}"
                                  Style="{StaticResource Button.Secondary}"
                                  Margin="0,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Command="{Binding ExportToExcelCommand}"
                                  Style="{StaticResource Button.Secondary}"
                                  Padding="16,0"
                                  Margin="0,0,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FileExcel" Width="18" Height="18" Margin="0,0,6,0"/>
                                    <TextBlock Text="Excel"/>
                                </StackPanel>
                            </Button>

                            <Button Command="{Binding ExportToCsvCommand}"
                                  Style="{StaticResource Button.Secondary}"
                                  Padding="16,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FileDelimited" Width="18" Height="18" Margin="0,0,6,0"/>
                                    <TextBlock Text="CSV"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Results Table -->
            <Border Grid.Row="1" Style="{StaticResource FormCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Style="{StaticResource SectionHeader.Prominent}">
                        <StackPanel Style="{StaticResource SectionHeader}" Margin="0">
                            <Border Background="{StaticResource Card.Success}" Style="{StaticResource IconBadge}">
                                <TextBlock Text="ðŸ“‹" FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Style="{StaticResource SectionHeader.Content}">
                                <TextBlock Text="Report Results" Style="{StaticResource SectionHeader.Title}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- All Categories DataGrid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding PaginatedAllTransactions}" Style="{StaticResource Section.DataGrid}" 
                              Visibility="{Binding IsAllView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGrid.Header.Standard}"/>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="100"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat='dd-MMM-yyyy HH:mm'}" Width="140"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TransactionType, Converter={StaticResource EnumToFriendlyStringConverter}}" Width="120"/>
                            <DataGridTextColumn Header="Dr/Cr" Binding="{Binding DebitCredit}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DebitCredit}" Value="Debit">
                                                <Setter Property="Foreground" Value="#D32F2F"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding DebitCredit}" Value="Credit">
                                                <Setter Property="Foreground" Value="#388E3C"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Item" Binding="{Binding Item}" Width="*"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Details" Binding="{Binding AdditionalInfo}" Width="*"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat='â‚¹{0:N2}'}" Width="130">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Inventory DataGrid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding PaginatedTransactions}" Style="{StaticResource Section.DataGrid}" 
                              Visibility="{Binding IsInventoryView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGrid.Header.Standard}"/>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat='dd-MMM-yyyy HH:mm'}" Width="140"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TransactionType, Converter={StaticResource EnumToFriendlyStringConverter}}" Width="120"/>
                            <DataGridTextColumn Header="Dr/Cr" Binding="{Binding DebitCredit}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DebitCredit}" Value="Debit">
                                                <Setter Property="Foreground" Value="#D32F2F"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding DebitCredit}" Value="Credit">
                                                <Setter Property="Foreground" Value="#388E3C"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Item" Binding="{Binding Item.ItemName}" Width="*"/>
                            <DataGridTextColumn Header="Party" Binding="{Binding Party.Name}" Width="*"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity, StringFormat=N2}" Width="100"/>
                            <DataGridTextColumn Header="Price/Unit" Binding="{Binding PricePerUnit, StringFormat='â‚¹{0:N2}'}" Width="110"/>
                            <DataGridTextColumn Header="Entered By" Binding="{Binding User.Username}" Width="100"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding TotalAmount, StringFormat='â‚¹{0:N2}'}" Width="130">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Financial DataGrid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding PaginatedFinancialTransactions}" Style="{StaticResource Section.DataGrid}" 
                              Visibility="{Binding IsFinancialView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGrid.Header.Standard}"/>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat='dd-MMM-yyyy HH:mm'}" Width="140"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TransactionType, Converter={StaticResource EnumToFriendlyStringConverter}}" Width="140"/>
                            <DataGridTextColumn Header="Dr/Cr" Binding="{Binding DebitCredit}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DebitCredit}" Value="Debit">
                                                <Setter Property="Foreground" Value="#D32F2F"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding DebitCredit}" Value="Credit">
                                                <Setter Property="Foreground" Value="#388E3C"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Party" Binding="{Binding Party.Name}" Width="*"/>
                            <DataGridTextColumn Header="Interest Rate" Binding="{Binding InterestRate, StringFormat={}{0:N2}%}" Width="110"/>
                            <DataGridTextColumn Header="Interest Amt" Binding="{Binding InterestAmount, StringFormat='â‚¹{0:N2}'}" Width="120"/>
                            <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat='dd-MMM-yyyy'}" Width="110"/>
                            <DataGridTextColumn Header="Entered By" Binding="{Binding User.Username}" Width="100"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat='â‚¹{0:N2}'}" Width="130">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Wages DataGrid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding PaginatedWageTransactions}" Style="{StaticResource Section.DataGrid}" 
                              Visibility="{Binding IsWagesView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGrid.Header.Standard}"/>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat='dd-MMM-yyyy HH:mm'}" Width="140"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TransactionType, Converter={StaticResource EnumToFriendlyStringConverter}}" Width="140"/>
                            <DataGridTextColumn Header="Dr/Cr" Binding="{Binding DebitCredit}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DebitCredit}" Value="Debit">
                                                <Setter Property="Foreground" Value="#D32F2F"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding DebitCredit}" Value="Credit">
                                                <Setter Property="Foreground" Value="#388E3C"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Worker" Binding="{Binding Worker.Name}" Width="*"/>
                            <DataGridTextColumn Header="Entered By" Binding="{Binding User.Username}" Width="100"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding NetAmount, StringFormat='â‚¹{0:N2}'}" Width="130">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Pagination Controls -->
                    <Border Grid.Row="2" Background="{StaticResource Card.Background}" 
                            BorderBrush="{StaticResource Border.Default}" 
                            BorderThickness="0,1,0,0" 
                            Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Record Count Info -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Showing " Foreground="{StaticResource Text.Secondary}" FontSize="13"/>
                                <TextBlock FontWeight="SemiBold" Foreground="{StaticResource Text.Primary}" FontSize="13" Margin="0,0,4,0">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0}-{1}">
                                            <Binding Path="CurrentPage"/>
                                            <Binding Path="TotalPages"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock Text=" of " Foreground="{StaticResource Text.Secondary}" FontSize="13"/>
                                <TextBlock Text="{Binding TotalRecords}" FontWeight="SemiBold" Foreground="{StaticResource Text.Primary}" FontSize="13" Margin="0,0,4,0"/>
                                <TextBlock Text="records" Foreground="{StaticResource Text.Secondary}" FontSize="13"/>
                            </StackPanel>

                            <!-- Page Navigation -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <!-- First Page Button -->
                                <Button Command="{Binding GoToFirstPageCommand}"
                                        IsEnabled="{Binding CanGoToPreviousPage}"
                                        Style="{StaticResource Button.Icon}"
                                        ToolTip="First Page"
                                        Width="36" Height="36"
                                        Margin="0,0,4,0">
                                    <materialDesign:PackIcon Kind="PageFirst" Width="18" Height="18"/>
                                </Button>

                                <!-- Previous Page Button -->
                                <Button Command="{Binding GoToPreviousPageCommand}"
                                        IsEnabled="{Binding CanGoToPreviousPage}"
                                        Style="{StaticResource Button.Icon}"
                                        ToolTip="Previous Page"
                                        Width="36" Height="36"
                                        Margin="0,0,8,0">
                                    <materialDesign:PackIcon Kind="ChevronLeft" Width="18" Height="18"/>
                                </Button>

                                <!-- Page Number Display -->
                                <Border Background="{StaticResource Card.Info}" 
                                        CornerRadius="4"
                                        Padding="12,8"
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center">
                                    <TextBlock Foreground="White" FontWeight="SemiBold" FontSize="13">
                                        <Run Text="Page "/>
                                        <Run Text="{Binding CurrentPage, Mode=OneWay}"/>
                                        <Run Text=" of "/>
                                        <Run Text="{Binding TotalPages, Mode=OneWay}"/>
                                    </TextBlock>
                                </Border>

                                <!-- Next Page Button -->
                                <Button Command="{Binding GoToNextPageCommand}"
                                        IsEnabled="{Binding CanGoToNextPage}"
                                        Style="{StaticResource Button.Icon}"
                                        ToolTip="Next Page"
                                        Width="36" Height="36"
                                        Margin="0,0,4,0">
                                    <materialDesign:PackIcon Kind="ChevronRight" Width="18" Height="18"/>
                                </Button>

                                <!-- Last Page Button -->
                                <Button Command="{Binding GoToLastPageCommand}"
                                        IsEnabled="{Binding CanGoToNextPage}"
                                        Style="{StaticResource Button.Icon}"
                                        ToolTip="Last Page"
                                        Width="36" Height="36">
                                    <materialDesign:PackIcon Kind="PageLast" Width="18" Height="18"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Loading Overlay -->
            <Border Grid.RowSpan="2" Background="#CC000000" 
                    Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="250" Height="6" Foreground="{StaticResource Card.Info}"/>
                    <TextBlock Text="Loading..." Foreground="White" FontSize="18" Margin="0,15,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

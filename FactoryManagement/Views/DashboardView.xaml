<UserControl x:Class="FactoryManagement.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Summary Cards (Top Row) -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Purchases Card -->
                <Border Grid.Column="0" Background="{StaticResource Card.Success}" Style="{StaticResource SummaryCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="ðŸ›’" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Total Purchases" Foreground="{StaticResource Card.Success.Label}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding TotalPurchases, StringFormat='â‚¹{0:N2}'}" 
                                       Foreground="White" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Total Sales Card -->
                <Border Grid.Column="2" Background="{StaticResource Card.Info}" Style="{StaticResource SummaryCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="ðŸ’°" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Total Sales" Foreground="{StaticResource Card.Info.Label}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding TotalSales, StringFormat='â‚¹{0:N2}'}" 
                                       Foreground="White" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Processing Fees Card -->
                <Border Grid.Column="4" Background="{StaticResource PrimaryGradient}" Style="{StaticResource SummaryCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="âš™ï¸" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Processing Fees" Foreground="#E0E7FF" FontSize="11" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding TotalProcessingFees, StringFormat='â‚¹{0:N2}'}" 
                                       Foreground="White" FontSize="20" FontWeight="Bold"/>
                            <TextBlock Text="{Binding ProcessingTransactionCount, StringFormat='{}{0} transactions'}" 
                                       Foreground="#E0E7FF" FontSize="9" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Total Wastage Card -->
                <Border Grid.Column="6" Background="{StaticResource Card.Danger}" Style="{StaticResource SummaryCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="ðŸ—‘ï¸" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Total Wastage" Foreground="{StaticResource Card.Danger.Label}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding TotalWastage, StringFormat='â‚¹{0:N2}'}" 
                                       Foreground="White" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Recent Entries Table -->
                <Border Grid.Column="0" Style="{StaticResource FormCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Style="{StaticResource SectionHeader.Prominent}">
                            <StackPanel Style="{StaticResource SectionHeader}" Margin="0">
                                <Border Background="{StaticResource Card.Info}" Style="{StaticResource IconBadge}">
                                    <TextBlock Text="ðŸ“Š" FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Style="{StaticResource SectionHeader.Content}">
                                    <TextBlock Text="Recent Entries" Style="{StaticResource SectionHeader.Title}"/>
                                    <TextBlock Text="Latest 15 transactions across all categories" Style="{StaticResource SectionHeader.Subtitle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="1" ItemsSource="{Binding AllTransactions}" Style="{StaticResource Section.DataGrid}" KeyboardNavigation.TabNavigation="Once">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGrid.Header.Standard}"/>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="100"/>
                                <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat='dd-MMM-yyyy HH:mm'}" Width="140"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding TransactionType, Converter={StaticResource EnumToFriendlyStringConverter}}" Width="120"/>
                                <DataGridTextColumn Header="Item" Binding="{Binding Item}" Width="*"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Details" Binding="{Binding AdditionalInfo}" Width="*"/>
                                <DataGridTextColumn Header="Entered By" Binding="{Binding EnteredBy}" Width="100"/>
                                <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat='â‚¹{0:N2}'}" Width="130">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Stock Levels Panel -->
                <Border Grid.Column="2" Style="{StaticResource FormCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Style="{StaticResource SectionHeader.Prominent}">
                            <StackPanel Style="{StaticResource SectionHeader}" Margin="0">
                            <Border Background="{StaticResource Card.Info}" Style="{StaticResource IconBadge}">
                                <TextBlock Text="ðŸ“¦" FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Style="{StaticResource SectionHeader.Content}">
                                <TextBlock Text="Stock Levels" Style="{StaticResource SectionHeader.Title}"/>
                                <TextBlock Text="Current Inventory Status" Style="{StaticResource SectionHeader.Subtitle}"/>
                            </StackPanel>
                        </StackPanel>
                        </Border>

                        <!-- Stock List -->
                        <ScrollViewer Grid.Row="1" Style="{StaticResource Section.ScrollViewer}">
                            <ItemsControl ItemsSource="{Binding AllItems}" Style="{StaticResource Section.ItemsControl}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="0,12" BorderBrush="{StaticResource Card.Border}" BorderThickness="0,0,0,1">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <!-- Item Name and Stock Value -->
                                                <DockPanel Grid.Row="0" Margin="0,0,0,8">
                                                    <TextBlock DockPanel.Dock="Left"
                                                             Text="{Binding ItemName}" 
                                                             FontWeight="SemiBold"
                                                             FontSize="13"
                                                             Foreground="{StaticResource Text.Primary}"
                                                             VerticalAlignment="Center"/>
                                                    <TextBlock DockPanel.Dock="Right"
                                                             HorizontalAlignment="Right"
                                                             VerticalAlignment="Center">
                                                        <Run Text="{Binding CurrentStock, StringFormat=N0, Mode=OneWay}" 
                                                             FontWeight="Bold"
                                                             FontSize="13"
                                                             Foreground="{StaticResource Card.Info}"/>
                                                        <Run Text=" " />
                                                        <Run Text="{Binding Unit, Mode=OneWay}" 
                                                             Foreground="{StaticResource Text.Secondary}"
                                                             FontSize="11"/>
                                                    </TextBlock>
                                                </DockPanel>
                                                
                                                <!-- Visual Stock Bar -->
                                                <Border Grid.Row="1" 
                                                       Background="{StaticResource Card.Header}" 
                                                       CornerRadius="4"
                                                       Height="8">
                                                    <Border HorizontalAlignment="Left" CornerRadius="4">
                                                        <Border.Width>
                                                            <MultiBinding Converter="{StaticResource StockBarWidthConverter}">
                                                                <Binding Path="CurrentStock"/>
                                                                <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Border}"/>
                                                            </MultiBinding>
                                                        </Border.Width>
                                                        <Border.Background>
                                                            <Binding Path="CurrentStock" Converter="{StaticResource StockLevelPercentConverter}" ConverterParameter="1000"/>
                                                        </Border.Background>
                                                    </Border>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Loading Overlay -->
            <Border Grid.RowSpan="3" Background="{StaticResource OverlayDark}"
                    Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="250" Height="6" Foreground="{StaticResource ButtonPrimary}"/>
                    <TextBlock Text="Loading..." Foreground="White" FontSize="18" Margin="0,15,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

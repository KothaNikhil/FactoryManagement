<UserControl x:Class="FactoryManagement.Views.PayrollManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:FactoryManagement.Behaviors"
             xmlns:controls="clr-namespace:FactoryManagement.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Summary Cards -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Wages Paid Card -->
            <Border Grid.Column="0" Background="{StaticResource SummaryCardSuccess}" CornerRadius="8" Padding="16">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="ðŸ’µ" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Total Wages Paid" Foreground="{StaticResource LabelSuccess}" FontSize="11" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding TotalWagesPaid, StringFormat='â‚¹{0:N2}'}" 
                                   Foreground="White" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Total Advances Card -->
            <Border Grid.Column="2" Background="{StaticResource SummaryCardWarning}" CornerRadius="8" Padding="16">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="ðŸ’°" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Total Advances Given" Foreground="{StaticResource LabelWarning}" FontSize="11" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding TotalAdvancesGiven, StringFormat='â‚¹{0:N2}'}" 
                                   Foreground="White" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Selected Worker Wages Card -->
            <Border Grid.Column="4" Background="{StaticResource SummaryCardInfo}" CornerRadius="8" Padding="16">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="ðŸ‘¤" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Worker Total Wages" Foreground="{StaticResource LabelInfo}" FontSize="11" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding SelectedWorkerTotalWages, StringFormat='â‚¹{0:N2}'}" 
                                   Foreground="White" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Outstanding Advance Card -->
            <Border Grid.Column="6" Background="{StaticResource SummaryCardDanger}" CornerRadius="8" Padding="16">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="âš ï¸" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Outstanding Advance" Foreground="{StaticResource LabelDanger}" FontSize="11" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding SelectedWorkerOutstandingAdvance, StringFormat='â‚¹{0:N2}'}" 
                                   Foreground="White" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Main Content - Left (Narrow) and Right (Wide) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT COLUMN: Record Payment -->
            <Border Grid.Column="0" BorderBrush="{StaticResource BorderPrimary}" BorderThickness="1" CornerRadius="8" Background="{StaticResource CardBackground}" Padding="24,24,24,15"
                ToolTip="Select worker and enter payment">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Form Content -->
                    <StackPanel Grid.Row="0">
                        <!-- Section Header -->
                        <controls:SectionHeader Title="Record Payment" 
                                              Icon="ðŸ’¸" 
                                              IconBackground="{StaticResource Card.Success}" />

                        <!-- Worker Selection -->
                        <TextBlock Text="Select Worker *" Style="{StaticResource FormLabel}"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox Grid.Column="0"
                                      ItemsSource="{Binding Workers}"
                                      SelectedItem="{Binding SelectedWorker, Mode=TwoWay}"
                                      DisplayMemberPath="Name"
                                      materialDesign:HintAssist.Hint="Choose worker"
                                      Style="{StaticResource ComboBox.Standard}">
                                <i:Interaction.Behaviors>
                                    <local:SearchableComboBoxBehavior DisplayMemberPath="Name"/>
                                </i:Interaction.Behaviors>
                            </ComboBox>
                            
                            <Button Grid.Column="2"
                                    Content="âž•"
                                    Command="{Binding QuickAddWorkerCommand}"
                                    ToolTip="Quick add worker"
                                    Width="38"
                                    Height="38"
                                    Padding="0"
                                    FontSize="16"
                                    Style="{StaticResource Button.Success}"/>
                        </Grid>

                        <!-- Outstanding Advance Info -->
                        <Border Background="{StaticResource SecondaryBackground}" CornerRadius="4" Padding="10" Margin="0,0,0,10"
                                Visibility="{Binding WorkerInfoVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Foreground="{StaticResource Text.Secondary}" FontSize="11">
                                <Run Text="Outstanding Advance: "/>
                                <Run Text="{Binding SelectedWorkerOutstandingAdvance, StringFormat=â‚¹{0:N0}}" Foreground="{StaticResource ErrorColor}" FontWeight="Bold"/>
                            </TextBlock>
                        </Border>

                        <!-- Payment Type -->
                        <TextBlock Text="Payment Type *" Style="{StaticResource FormLabel}"/>
                        <ComboBox ItemsSource="{Binding TransactionTypes}"
                                  SelectedItem="{Binding TransactionType, Mode=TwoWay}"
                                  Style="{StaticResource ComboBox.Standard}"
                                  Margin="0,0,0,10"
                                  materialDesign:HintAssist.Hint="Select Type"/>

                        <!-- Payment Mode -->
                        <TextBlock Text="Payment Mode *" Style="{StaticResource FormLabel}"/>
                        <ComboBox ItemsSource="{Binding PaymentModes}"
                                  SelectedItem="{Binding SelectedPaymentModeString, Mode=TwoWay}"
                                  Style="{StaticResource ComboBox.Standard}"
                                  Margin="0,0,0,10"/>

                        <!-- Amount -->
                        <TextBlock Text="Amount *" Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBox.Standard}"
                                 FontSize="16"
                                 FontWeight="Bold"
                                 Margin="0,0,0,10"/>

                        <!-- Notes -->
                        <TextBlock Text="Notes" Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding Notes}"
                                 materialDesign:HintAssist.Hint="Optional..."
                                 Style="{StaticResource TextBox.Standard}"
                                 TextWrapping="Wrap"
                                 MinLines="1"
                                 MaxLines="1"
                                 Margin="0,0,0,10"/>

                        <!-- Error Message -->
                        <Border Background="{StaticResource HighlightBackgroundRed}" BorderBrush="{StaticResource HighlightBorderRed}" BorderThickness="1" CornerRadius="4" Padding="6" Margin="0,0,0,0"
                                Visibility="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}">
                            <TextBlock Text="{Binding ErrorMessage}" 
                                       Foreground="{StaticResource ErrorColor}" 
                                       FontSize="10"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>

                    <!-- Action Buttons: Save / Cancel Edit / Clear -->
                    <Grid Grid.Row="1" Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Save / Update -->
                        <Button Grid.Column="0"
                                Command="{Binding SaveWagePaymentCommand}"
                                Height="44">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource Button.Success}">
                                    <Setter Property="Content" Value="ðŸ’¾ RECORD PAYMENT"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                            <Setter Property="Content" Value="ðŸ’¾ UPDATE PAYMENT"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Cancel Edit -->
                        <Button Grid.Column="1"
                                Content="Cancel Edit"
                                Command="{Binding CancelEditCommand}"
                                Style="{StaticResource Button.Secondary}"
                                Height="44"
                                Margin="10,0,0,0"
                                Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <!-- Clear Form -->
                        <Button Grid.Column="2"
                                Content="Clear"
                                Command="{Binding ClearPaymentFormCommand}"
                                Style="{StaticResource Button.Secondary}"
                                Height="44"
                                Margin="10,0,0,0"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- RIGHT COLUMN: Payment History (Wide) -->
            <Border Grid.Column="2" BorderBrush="{StaticResource BorderPrimary}" BorderThickness="1" CornerRadius="8" Background="{StaticResource CardBackground}" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource Card.Header}" Padding="15" Margin="-20,-20,-20,15" CornerRadius="8,8,0,0">
                        <Grid Margin="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Style="{StaticResource SectionHeader}" Margin="0">
                                <Border Background="{StaticResource Card.Info}" Style="{StaticResource IconBadge}">
                                    <TextBlock Text="ðŸ“Š" FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Style="{StaticResource SectionHeader.Content}">
                                    <TextBlock Text="Recent Payment History" Style="{StaticResource SectionHeader.Title}"/>
                                </StackPanel>
                            </StackPanel>
                            <Button Grid.Column="1" Content="â†© Undo Delete" 
                                    Command="{Binding UndoDeleteWageTransactionCommand}"
                                    Style="{StaticResource Button.Secondary}"
                                    Padding="12,4"/>
                        </Grid>
                    </Border>

                    <DataGrid Grid.Row="1" Style="{StaticResource Section.DataGrid}"
                              ItemsSource="{Binding PaginatedTransactions}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              Background="Transparent"
                              RowBackground="{StaticResource SecondaryBackground}"
                              AlternatingRowBackground="#333"
                              BorderThickness="0"
                              KeyboardNavigation.TabNavigation="Once"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                <Setter Property="Foreground" Value="#BBB"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="BorderBrush" Value="#444"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Edit" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource DataGrid.EditButton}"
                                                Command="{Binding DataContext.EditWageTransactionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Edit">
                                            <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16"/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Delete" Width="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource DataGrid.EditButton}"
                                                Command="{Binding DataContext.DeleteWageTransactionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Delete">
                                            <materialDesign:PackIcon Kind="DeleteForever" Width="16" Height="16"/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat='dd-MMM-yyyy HH:mm'}"/>
                            <DataGridTextColumn Header="Worker" Binding="{Binding Worker.Name}" Width="*"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TransactionType, Converter={StaticResource WageTransactionTypeConverter}}"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=â‚¹{0:N2}}"/>
                            <DataGridTextColumn Header="Mode" Binding="{Binding PaymentMode, Converter={StaticResource EnumToFriendlyStringConverter}}"/>
                            <DataGridTextColumn Header="Entered By" Binding="{Binding User.Username}"/>
                            <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Date Navigation Control -->
                    <Border Grid.Row="2" Margin="0,16,0,0"
                            Background="{DynamicResource Card.Primary}" 
                            CornerRadius="8" 
                            Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Previous Day Button -->
                            <Button Grid.Column="0" 
                                    Command="{Binding GoToPreviousTransactionDayCommand}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    ToolTip="Previous Day"
                                    Margin="0,0,8,0">
                                <materialDesign:PackIcon Kind="ChevronLeft" Width="24" Height="24"/>
                            </Button>

                            <!-- Current Date Display -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Calendar" 
                                                       Width="20" Height="20" 
                                                       Foreground="{DynamicResource Text.Secondary}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding CurrentTransactionDate, StringFormat='MMM dd, yyyy (ddd)'}"
                                         FontSize="14"
                                         FontWeight="Medium"
                                         Foreground="{DynamicResource Text.Primary}"
                                         VerticalAlignment="Center"
                                         Margin="0,0,16,0"/>
                                <Button Content="Today" 
                                        Command="{Binding GoToTodayTransactionCommand}"
                                        Style="{StaticResource Button.Secondary}"
                                        Padding="12,4"
                                        Height="28"
                                        FontSize="12"/>
                                <TextBlock Text="{Binding TotalRecords, StringFormat='({0} transactions)'}"
                                         FontSize="12"
                                         Foreground="{DynamicResource Text.Secondary}"
                                         VerticalAlignment="Center"
                                         Margin="12,0,0,0"/>
                            </StackPanel>

                            <!-- Next Day Button -->
                            <Button Grid.Column="2" 
                                    Command="{Binding GoToNextTransactionDayCommand}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    ToolTip="Next Day"
                                    Margin="8,0,0,0">
                                <materialDesign:PackIcon Kind="ChevronRight" Width="24" Height="24"/>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <materialDesign:Snackbar MessageQueue="{Binding SnackbarMessageQueue}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,16,16"/>
    </Grid>
</UserControl>


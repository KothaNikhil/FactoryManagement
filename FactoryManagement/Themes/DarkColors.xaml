<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================ -->
    <!-- BACKGROUND PALETTE                           -->
    <!-- ============================================ -->
    
    <!-- Primary/Main background: Deep navy/charcoal -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#1A1D29"/>
    
    <!-- Secondary background: Slightly lighter -->
    <SolidColorBrush x:Key="SecondaryBackground" Color="#252837"/>
    
    <!-- Card/Panel background: Medium dark -->
    <SolidColorBrush x:Key="CardBackground" Color="#2D3142"/>
    
    <!-- Elevated surfaces: Lighter elevated -->
    <SolidColorBrush x:Key="ElevatedBackground" Color="#363B4E"/>

    <!-- ============================================ -->
    <!-- ACCENT PALETTE                               -->
    <!-- ============================================ -->
    
    <!-- Primary accent: Soft lavender -->
    <SolidColorBrush x:Key="PrimaryAccent" Color="#B8B0FF"/>
    
    <!-- Secondary accent: Medium purple -->
    <SolidColorBrush x:Key="SecondaryAccent" Color="#9B8CFF"/>
    
    <!-- Dark accent: Deep purple -->
    <SolidColorBrush x:Key="DarkAccent" Color="#6B5DD3"/>
    
    <!-- Glow/Hover states: Bright purple -->
    <SolidColorBrush x:Key="AccentGlow" Color="#C4B5FF"/>
    
    <!-- Accent variations for different UI states -->
    <SolidColorBrush x:Key="AccentHover" Color="#A89FFF"/>
    <SolidColorBrush x:Key="AccentPressed" Color="#8A7BFF"/>

    <!-- ============================================ -->
    <!-- STATUS INDICATORS                            -->
    <!-- ============================================ -->
    
    <!-- Success/Positive: Muted teal-green (refined, not neon) -->
    <SolidColorBrush x:Key="SuccessColor" Color="#3DAA8F"/>
    <SolidColorBrush x:Key="SuccessColorAlt" Color="#4DB8C8"/>
    
    <!-- Error/Negative: Muted coral red -->
    <SolidColorBrush x:Key="ErrorColor" Color="#E86B6B"/>
    <SolidColorBrush x:Key="DangerColor" Color="#E86B6B"/>
    
    <!-- Warning: Muted amber orange -->
    <SolidColorBrush x:Key="WarningColor" Color="#E89B47"/>
    
    <!-- Info: Soft blue (matches login theme) -->
    <SolidColorBrush x:Key="InfoColor" Color="#5A9EDF"/>

    <!-- Status color variations (softer versions) -->
    <SolidColorBrush x:Key="SuccessSoft" Color="#2D8A6F"/>
    <SolidColorBrush x:Key="ErrorSoft" Color="#D85555"/>
    <SolidColorBrush x:Key="WarningSoft" Color="#D88B37"/>
    <SolidColorBrush x:Key="InfoSoft" Color="#4A8ECF"/>

    <!-- ============================================ -->
    <!-- TEXT HIERARCHY                               -->
    <!-- ============================================ -->
    
    <!-- Primary text: Off-white -->
    <SolidColorBrush x:Key="TextPrimary" Color="#E8E9F3"/>
    
    <!-- Secondary text: Muted gray -->
    <SolidColorBrush x:Key="TextSecondary" Color="#A0A3BD"/>
    
    <!-- Disabled/Muted: Dark gray -->
    <SolidColorBrush x:Key="TextDisabled" Color="#6B7280"/>
    <SolidColorBrush x:Key="TextMuted" Color="#4A4E69"/>
    
    <!-- Additional text variants -->
    <SolidColorBrush x:Key="TextHighlight" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextTertiary" Color="#8A8DA8"/>

    <!-- ============================================ -->
    <!-- BORDERS & DIVIDERS                           -->
    <!-- ============================================ -->
    
    <!-- Primary borders: Gray-blue -->
    <SolidColorBrush x:Key="BorderPrimary" Color="#4A4E69"/>
    
    <!-- Subtle dividers: Dark -->
    <SolidColorBrush x:Key="BorderSubtle" Color="#363B4E"/>
    
    <!-- Accent borders: Purple -->
    <SolidColorBrush x:Key="BorderAccent" Color="#9B8CFF"/>
    
    <!-- Additional border variations -->
    <SolidColorBrush x:Key="BorderLight" Color="#5A5E79"/>
    <SolidColorBrush x:Key="BorderDark" Color="#2A2E41"/>
    <SolidColorBrush x:Key="BorderFocus" Color="#B8B0FF"/>

    <!-- ============================================ -->
    <!-- CHART & DATA VISUALIZATION                   -->
    <!-- ============================================ -->
    
    <!-- Primary chart colors (refined, not neon) -->
    <SolidColorBrush x:Key="ChartBlue" Color="#5A9EDF"/>
    <SolidColorBrush x:Key="ChartPurple" Color="#9B8CFF"/>
    <SolidColorBrush x:Key="ChartRed" Color="#E86B6B"/>
    <SolidColorBrush x:Key="ChartCyan" Color="#4DB8C8"/>
    <SolidColorBrush x:Key="ChartGreen" Color="#3DAA8F"/>
    <SolidColorBrush x:Key="ChartOrange" Color="#E89B47"/>
    <SolidColorBrush x:Key="ChartPink" Color="#E86EC7"/>
    <SolidColorBrush x:Key="ChartYellow" Color="#E8C93D"/>
    
    <!-- Additional chart variations -->
    <SolidColorBrush x:Key="ChartTeal" Color="#4DB8C8"/>
    <SolidColorBrush x:Key="ChartLime" Color="#6FCF70"/>
    <SolidColorBrush x:Key="ChartMagenta" Color="#B77DDF"/>
    <SolidColorBrush x:Key="ChartAmber" Color="#D89B37"/>

    <!-- ============================================ -->
    <!-- GRADIENT BRUSHES                             -->
    <!-- ============================================ -->
    
    <!-- Purple gradient for buttons (light to dark purple) -->
    <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#B8B0FF" Offset="0"/>
        <GradientStop Color="#6B5DD3" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Purple gradient horizontal -->
    <LinearGradientBrush x:Key="PurpleGradientHorizontal" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#B8B0FF" Offset="0"/>
        <GradientStop Color="#6B5DD3" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Card background gradient (subtle depth) -->
    <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2D3142" Offset="0"/>
        <GradientStop Color="#252837" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Elevated surface gradient -->
    <LinearGradientBrush x:Key="ElevatedGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#363B4E" Offset="0"/>
        <GradientStop Color="#2D3142" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Success gradient (refined) -->
    <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#3DAA8F" Offset="0"/>
        <GradientStop Color="#4DB8C8" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Glow effect gradient for interactive elements -->
    <LinearGradientBrush x:Key="GlowGradient" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#C4B5FF" Offset="0"/>
        <GradientStop Color="#9B8CFF" Offset="0.5"/>
        <GradientStop Color="#6B5DD3" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Radial gradient for glow effects -->
    <RadialGradientBrush x:Key="RadialGlow" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
        <GradientStop Color="#80B8B0FF" Offset="0"/>
        <GradientStop Color="#00B8B0FF" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- Accent button hover gradient -->
    <LinearGradientBrush x:Key="AccentHoverGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#C4B5FF" Offset="0"/>
        <GradientStop Color="#8A7BFF" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Subtle background gradient -->
    <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1A1D29" Offset="0"/>
        <GradientStop Color="#252837" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Header gradient -->
    <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#2D3142" Offset="0"/>
        <GradientStop Color="#363B4E" Offset="1"/>
    </LinearGradientBrush>

    <!-- ============================================ -->
    <!-- OVERLAY & SHADOW EFFECTS                     -->
    <!-- ============================================ -->
    
    <!-- Semi-transparent overlays -->
    <SolidColorBrush x:Key="OverlayDark" Color="#CC000000"/>
    <SolidColorBrush x:Key="OverlayMedium" Color="#88000000"/>
    <SolidColorBrush x:Key="OverlayLight" Color="#44000000"/>
    
    <!-- Shadow colors -->
    <SolidColorBrush x:Key="ShadowColor" Color="#80000000"/>
    <SolidColorBrush x:Key="ShadowColorLight" Color="#40000000"/>
    
    <!-- Highlight overlay for hover states -->
    <SolidColorBrush x:Key="HighlightOverlay" Color="#0AFFFFFF"/>

    <!-- ============================================ -->
    <!-- INPUT & INTERACTIVE ELEMENTS                 -->
    <!-- ============================================ -->
    
    <!-- Input background -->
    <SolidColorBrush x:Key="InputBackground" Color="#2D3142"/>
    <SolidColorBrush x:Key="InputBackgroundHover" Color="#363B4E"/>
    <SolidColorBrush x:Key="InputBackgroundFocus" Color="#3A3F52"/>
    <SolidColorBrush x:Key="InputBackgroundDisabled" Color="#1F2230"/>
    
    <!-- Selection colors -->
    <SolidColorBrush x:Key="SelectionBackground" Color="#9B8CFF"/>
    <SolidColorBrush x:Key="SelectionForeground" Color="#FFFFFF"/>
    
    <!-- Scrollbar colors -->
    <SolidColorBrush x:Key="ScrollBarBackground" Color="#252837"/>
    <SolidColorBrush x:Key="ScrollBarThumb" Color="#4A4E69"/>
    <SolidColorBrush x:Key="ScrollBarThumbHover" Color="#5A5E79"/>

    <!-- ============================================ -->
    <!-- SEMANTIC COLORS                              -->
    <!-- ============================================ -->
    
    <!-- Button colors - Subtle, professional shades like Login page -->
    <!-- Primary action buttons (Login, Save, Create) -->
    <SolidColorBrush x:Key="ButtonPrimary" Color="#6B5DD3"/> <!-- Deep purple - primary actions -->
    <SolidColorBrush x:Key="ButtonPrimaryHover" Color="#7D6FE3"/>
    <SolidColorBrush x:Key="ButtonPrimaryPressed" Color="#5A4DC2"/>
    
    <!-- Success action buttons (Save, Confirm, Complete) -->
    <SolidColorBrush x:Key="ButtonSuccess" Color="#2D7A5F"/> <!-- Darker green, less bright -->
    <SolidColorBrush x:Key="ButtonSuccessHover" Color="#3A9076"/>
    <SolidColorBrush x:Key="ButtonSuccessPressed" Color="#256A52"/>
    
    <!-- Info/Secondary action buttons (Refresh, Update) -->
    <SolidColorBrush x:Key="ButtonInfo" Color="#3A7BB8"/> <!-- Muted blue -->
    <SolidColorBrush x:Key="ButtonInfoHover" Color="#4A8DC8"/>
    <SolidColorBrush x:Key="ButtonInfoPressed" Color="#2D6AA5"/>
    
    <!-- Warning action buttons (Update Interest, Caution actions) -->
    <SolidColorBrush x:Key="ButtonWarning" Color="#C08850"/> <!-- Darker orange -->
    <SolidColorBrush x:Key="ButtonWarningHover" Color="#D09860"/>
    <SolidColorBrush x:Key="ButtonWarningPressed" Color="#A87740"/>
    
    <!-- Danger/Delete action buttons -->
    <SolidColorBrush x:Key="ButtonDanger" Color="#C84848"/> <!-- Darker red -->
    <SolidColorBrush x:Key="ButtonDangerHover" Color="#D85858"/>
    <SolidColorBrush x:Key="ButtonDangerPressed" Color="#B03838"/>
    
    <!-- Neutral/Secondary buttons (Cancel, Close, Undo) -->
    <SolidColorBrush x:Key="ButtonNeutral" Color="#4A4E69"/> <!-- Gray -->
    <SolidColorBrush x:Key="ButtonNeutralHover" Color="#5A5E79"/>
    <SolidColorBrush x:Key="ButtonNeutralPressed" Color="#3A3E59"/>
    
    <!-- Generic button backgrounds (fallback) -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#4A4E69"/>
    <SolidColorBrush x:Key="ButtonBackgroundHover" Color="#5A5E79"/>
    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#3A3E59"/>
    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="#1F2230"/>
    
    <!-- Menu colors -->
    <SolidColorBrush x:Key="MenuBackground" Color="#252837"/>
    <SolidColorBrush x:Key="MenuItemHover" Color="#363B4E"/>
    <SolidColorBrush x:Key="MenuItemPressed" Color="#2D3142"/>
    
    <!-- Tooltip colors -->
    <SolidColorBrush x:Key="TooltipBackground" Color="#363B4E"/>
    <SolidColorBrush x:Key="TooltipForeground" Color="#E8E9F3"/>
    <SolidColorBrush x:Key="TooltipBorder" Color="#4A4E69"/>

    <!-- ============================================ -->
    <!-- ADDITIONAL UTILITY COLORS                    -->
    <!-- ============================================ -->
    
    <!-- Transparent -->
    <SolidColorBrush x:Key="Transparent" Color="Transparent"/>
    
    <!-- Pure colors for special cases -->
    <SolidColorBrush x:Key="White" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Black" Color="#000000"/>
    
    <!-- Validation colors (consistent with status indicators) -->
    <SolidColorBrush x:Key="ValidationError" Color="#E86B6B"/>
    <SolidColorBrush x:Key="ValidationWarning" Color="#E89B47"/>
    <SolidColorBrush x:Key="ValidationSuccess" Color="#3DAA8F"/>

    <!-- ============================================ -->
    <!-- ADDITIONAL VIEW-SPECIFIC COLORS              -->
    <!-- ============================================ -->
    
    <!-- Title bar and window chrome -->
    <SolidColorBrush x:Key="TitleBarBackground" Color="#1A1D29"/>
    <SolidColorBrush x:Key="TitleBarBackgroundAlt" Color="#252837"/>
    <SolidColorBrush x:Key="CloseButtonHover" Color="#f45c43"/>
    
    <!-- Navigation panel -->
    <SolidColorBrush x:Key="NavPanelTop" Color="#252837"/>
    <SolidColorBrush x:Key="NavPanelBottom" Color="#1A1D29"/>
    
    <!-- Summary card backgrounds (for different states) -->
    <SolidColorBrush x:Key="SummaryCardSuccess" Color="#2D5044"/> <!-- Dark green -->
    <SolidColorBrush x:Key="SummaryCardDanger" Color="#4D2E2E"/> <!-- Dark red -->
    <SolidColorBrush x:Key="SummaryCardWarning" Color="#4D3E2E"/> <!-- Dark orange -->
    <SolidColorBrush x:Key="SummaryCardInfo" Color="#2E3E4D"/> <!-- Dark blue -->
    
    <!-- Label colors for cards (soft/pastel) -->
    <SolidColorBrush x:Key="LabelSuccess" Color="#90EE90"/>
    <SolidColorBrush x:Key="LabelDanger" Color="#FFB6C1"/>
    <SolidColorBrush x:Key="LabelInfo" Color="#ADD8E6"/>
    <SolidColorBrush x:Key="LabelWarning" Color="#FFEAA7"/>
    
    <!-- Delete/Danger button backgrounds -->
    <SolidColorBrush x:Key="DeleteButtonBackground" Color="#3a2020"/>
    <SolidColorBrush x:Key="DeleteButtonForeground" Color="#E86B6B"/>
    
    <!-- Accent glow effects (more refined) -->
    <SolidColorBrush x:Key="AccentGlowCyan" Color="#4DB8C8"/>
    <SolidColorBrush x:Key="AccentGlowOrange" Color="#E89B47"/>
    
    <!-- Dialog and modal backgrounds -->
    <SolidColorBrush x:Key="DialogBackground" Color="#1e1e1e"/>
    <SolidColorBrush x:Key="DialogBorder" Color="#3a3a3a"/>
    
    <!-- Highlight/Badge backgrounds -->
    <SolidColorBrush x:Key="HighlightBackgroundRed" Color="#4d1f1f"/>
    <SolidColorBrush x:Key="HighlightBorderRed" Color="#E86B6B"/>
    
    <!-- Info panel backgrounds -->
    <SolidColorBrush x:Key="InfoPanelBackground" Color="#1A1D29"/>
    <SolidColorBrush x:Key="InfoPanelBorder" Color="#4A4E69"/>
    
    <!-- Title bar gradients -->
    <LinearGradientBrush x:Key="TitleBarGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#1A1D29" Offset="0"/>
        <GradientStop Color="#252837" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Navigation panel gradient -->
    <LinearGradientBrush x:Key="NavPanelGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#252837" Offset="0"/>
        <GradientStop Color="#1A1D29" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>

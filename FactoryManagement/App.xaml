<Application x:Class="FactoryManagement.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:FactoryManagement.Converters"
             xmlns:viewmodels="clr-namespace:FactoryManagement.ViewModels"
             xmlns:System="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Cyan" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Enable Smooth Animations -->
            <Duration x:Key="MaterialDesignTransitionDuration">0:0:0.3</Duration>
            <System:Boolean x:Key="MaterialDesignDisableTransitions">False</System:Boolean>
            
            <!-- Modern Gradient Brushes -->
            <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="1"/>
            </LinearGradientBrush>
            
            <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#11998e" Offset="0"/>
                <GradientStop Color="#38ef7d" Offset="1"/>
            </LinearGradientBrush>
            
            <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#eb3349" Offset="0"/>
                <GradientStop Color="#f45c43" Offset="1"/>
            </LinearGradientBrush>
            
            <LinearGradientBrush x:Key="InfoGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#4facfe" Offset="0"/>
                <GradientStop Color="#00f2fe" Offset="1"/>
            </LinearGradientBrush>
            
            <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0f0c29" Offset="0"/>
                <GradientStop Color="#302b63" Offset="0.5"/>
                <GradientStop Color="#24243e" Offset="1"/>
            </LinearGradientBrush>
            
            <!-- Modern Color Palette -->
            <SolidColorBrush x:Key="PrimaryPurple" Color="#667eea"/>
            <SolidColorBrush x:Key="PrimaryPurpleLight" Color="#9f7aea"/>
            <SolidColorBrush x:Key="PrimaryPurpleDark" Color="#553c9a"/>
            <SolidColorBrush x:Key="AccentCyan" Color="#00f2fe"/>
            <SolidColorBrush x:Key="BackgroundDark" Color="#1a1a2e"/>
            <SolidColorBrush x:Key="SurfaceDark" Color="#16213e"/>
            <SolidColorBrush x:Key="SurfaceLight" Color="#0f3460"/>
            <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="TextSecondary" Color="#B0B0B0"/>
            <SolidColorBrush x:Key="SuccessColor" Color="#38ef7d"/>
            <SolidColorBrush x:Key="DangerColor" Color="#f45c43"/>
            <SolidColorBrush x:Key="InfoColor" Color="#4facfe"/>
            
            <!-- Modern Card Style with Glass Morphism -->
            <Style x:Key="ModernCard" TargetType="materialDesign:Card" BasedOn="{StaticResource {x:Type materialDesign:Card}}">
                <Setter Property="UniformCornerRadius" Value="16"/>
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
                <Setter Property="Margin" Value="12"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="#16213e" Opacity="0.8"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp8"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- Animated Gradient Card -->
            <Style x:Key="GradientCard" TargetType="materialDesign:Card" BasedOn="{StaticResource ModernCard}">
                <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
                <Style.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(materialDesign:ElevationAssist.Elevation)" 
                                               To="16" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(materialDesign:ElevationAssist.Elevation)" 
                                               To="4" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Style.Triggers>
            </Style>
            
            <!-- Modern Button Style -->
            <Style x:Key="ModernButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="Height" Value="44"/>
                <Setter Property="Padding" Value="24,0"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.9"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- Converters -->
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibilityConverter"/>
            <converters:EditModeToTextConverter x:Key="EditModeToTextConverter"/>
            <converters:TransactionTypeConverter x:Key="TransactionTypeConverter"/>
            <converters:BoolToTextConverter x:Key="BoolToTextConverter"/>
            <converters:EnumVisibilityConverter x:Key="EnumVisibilityConverter"/>
            <converters:WageTransactionTypeConverter x:Key="WageTransactionTypeConverter"/>
            <converters:StockBarWidthConverter x:Key="StockBarWidthConverter"/>
            <converters:StockLevelColorConverter x:Key="StockLevelColorConverter"/>
            <converters:StockToRectConverter x:Key="StockToRectConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>

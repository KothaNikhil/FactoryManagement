<Window x:Class="FactoryManagement.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Factory Management System - User Login" 
        Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    
    <Border Background="{StaticResource BackgroundGradient}" 
            CornerRadius="12"
            BorderThickness="1"
            BorderBrush="{StaticResource DialogBorder}">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="20" ShadowDepth="5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryGradient}"
                    CornerRadius="12,12,0,0"
                    Padding="30,25">
                <StackPanel>
                    <TextBlock Text="ðŸ­" 
                               FontSize="{StaticResource FontSize.Icon.ExtraLarge}" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Factory Management System" 
                               FontSize="{StaticResource FontSize.Amount}" 
                               FontWeight="SemiBold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Select your user account to continue" 
                               FontSize="{StaticResource FontSize.SmallMedium}" 
                               Foreground="{StaticResource TextPrimary}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- User Selection -->
            <StackPanel Grid.Row="1" 
                        Margin="40,30"
                        VerticalAlignment="Center">
                <TextBlock Text="Select User" 
                           Foreground="{StaticResource Text.Primary}"
                           FontSize="{StaticResource FontSize.Medium}"
                           FontWeight="Medium"
                           Margin="0,0,0,12"/>
                
                <ComboBox x:Name="UserComboBox"
                          ItemsSource="{Binding ActiveUsers}"
                          SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                          DisplayMemberPath="Username"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          FontSize="{StaticResource FontSize.Large}"
                          Padding="16,12"
                          Foreground="White"
                          materialDesign:HintAssist.Hint="Choose your username"
                          materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource ButtonPrimary}">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem" BasedOn="{StaticResource MaterialDesignComboBoxItemStyle}">
                            <Setter Property="Padding" Value="16,12"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="{StaticResource ErrorColor}"
                           FontSize="{StaticResource FontSize.SmallMedium}"
                           Margin="4,8,0,0"
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>

                <!-- Info Message -->
                <Border Background="{StaticResource InfoPanelBackground}"
                        BorderBrush="{StaticResource InfoPanelBorder}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="12"
                        Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="InformationOutline"
                                               Width="20"
                                               Height="20"
                                               Foreground="{StaticResource InfoColor}"
                                               VerticalAlignment="Top"
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="You must select a user to access the system. Your username will be recorded with all transactions."
                                   Foreground="{StaticResource Text.Secondary}"
                                   FontSize="{StaticResource FontSize.Small}"
                                   TextWrapping="Wrap"
                                   LineHeight="16"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Buttons -->
            <Grid Grid.Row="2" 
                  Margin="40,0,40,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="EXIT"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Height="44"
                        FontSize="{StaticResource FontSize.Medium}"
                        FontWeight="SemiBold"
                        BorderBrush="{StaticResource Text.Secondary}"
                        Foreground="{StaticResource Text.Secondary}">
                    <Button.FocusVisualStyle>
                        <Style>
                            <Setter Property="Control.Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Border BorderBrush="{StaticResource AccentGlowCyan}" BorderThickness="2" CornerRadius="4"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.FocusVisualStyle>
                </Button>

                <Button Grid.Column="2"
                        Content="LOGIN"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="{StaticResource ButtonPrimary}"
                        BorderBrush="{StaticResource ButtonPrimary}"
                        Height="44"
                        FontSize="{StaticResource FontSize.Medium}"
                        FontWeight="SemiBold">
                    <Button.FocusVisualStyle>
                        <Style>
                            <Setter Property="Control.Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Border BorderBrush="{StaticResource White}" BorderThickness="2" CornerRadius="4"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.FocusVisualStyle>
                </Button>
            </Grid>

            <!-- Loading Overlay -->
            <Border Grid.RowSpan="3"
                    Background="{StaticResource OverlayDark}"
                    CornerRadius="12"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 Value="0"
                                 IsIndeterminate="True"
                                 Width="50"
                                 Height="50"
                                 Foreground="{StaticResource ButtonPrimary}"/>
                    <TextBlock Text="Loading users..." 
                               Foreground="White" 
                               FontSize="{StaticResource FontSize.Medium}" 
                               Margin="0,16,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>

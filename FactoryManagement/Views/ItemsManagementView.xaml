<UserControl x:Class="FactoryManagement.Views.ItemsManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Summary Cards -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Items Card -->
            <Border Grid.Column="0" Background="{StaticResource Card.Success}" Style="{StaticResource SummaryCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="ðŸ“¦" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Total Items" Foreground="{StaticResource Card.Success.Label}" FontSize="11" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding TotalItems}" 
                                   Foreground="White" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Total Stock Value Card -->
            <Border Grid.Column="2" Background="{StaticResource Card.Info}" Style="{StaticResource SummaryCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="ðŸ“Š" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Total Stock" Foreground="{StaticResource Card.Info.Label}" FontSize="11" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding TotalStockValue}" 
                                   Foreground="White" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Low Stock Items Card -->
            <Border Grid.Column="4" Background="{StaticResource Card.Warning}" Style="{StaticResource SummaryCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="âš ï¸" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Low Stock" Foreground="{StaticResource Card.Warning.Label}" FontSize="11" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding LowStockCount}" 
                                   Foreground="White" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Categories Card -->
            <Border Grid.Column="6" Background="{StaticResource Card.Danger}" Style="{StaticResource SummaryCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="ðŸ“‚" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Categories" Foreground="{StaticResource Card.Danger.Label}" FontSize="11" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding CategoryCount}" 
                                   Foreground="White" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="450"/>
            </Grid.ColumnDefinitions>

            <!-- Items List -->
            <Border Grid.Column="0" Margin="0,0,12,0" Style="{StaticResource FormCard}">
                <DockPanel>
                    <!-- Header -->
                    <Border DockPanel.Dock="Top" Style="{StaticResource SectionHeader.Border}">
                        <StackPanel Orientation="Horizontal">
                            <Border Style="{StaticResource IconBadge}" Background="{StaticResource Card.Success}">
                                <materialDesign:PackIcon Kind="PackageVariant" Width="20" Height="20" 
                                                       Foreground="White" 
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="All Items" 
                                     FontSize="18" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource Text.Primary}"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Search Box -->
                    <Border DockPanel.Dock="Top" 
                            Background="{StaticResource Card.Header}"
                            CornerRadius="8"
                            Padding="12,8"
                            Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="Magnify" 
                                                   Foreground="{StaticResource Text.Secondary}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBox Grid.Column="1"
                                   Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                   materialDesign:HintAssist.Hint="Search items by name..."
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   Margin="0,0,0,0"
                                   FontSize="14"/>
                        </Grid>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" Style="{StaticResource DataGrid.Dark}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGrid.Header.Standard}"/>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ItemId}" Width="70"></DataGridTextColumn>
                            <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*"></DataGridTextColumn>
                            <DataGridTextColumn Header="Current Stock" Binding="{Binding CurrentStock, StringFormat=N2}" Width="130"></DataGridTextColumn>
                            <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width="90"></DataGridTextColumn>
                            <DataGridTemplateColumn Header="Actions" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Style="{StaticResource DataGrid.EditButton}"
                                                  Command="{Binding DataContext.EditItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"
                                                  ToolTip="Edit">
                                                <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16"/>
                                            </Button>
                                            <Button Style="{StaticResource DataGrid.EditButton}"
                                                  Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"
                                                  ToolTip="Delete"
                                                  Margin="4,0,0,0"
                                                  Foreground="#EF5350">
                                                <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>

            <!-- Item Form -->
            <Border Grid.Column="1" Style="{StaticResource FormCard}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Header -->
                        <Border DockPanel.Dock="Top" Style="{StaticResource SectionHeader.Border}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <Border Style="{StaticResource IconBadge}" Background="{StaticResource Card.Success}">
                                        <materialDesign:PackIcon Kind="Package" Width="20" Height="20" 
                                                               Foreground="White" 
                                                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="{Binding IsEditMode, Converter={StaticResource EditModeToTextConverter}}" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource Text.Primary}"
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <Button Grid.Column="1"
                                      Content="+ New"
                                      Command="{Binding NewItemCommand}"
                                      Style="{StaticResource MaterialDesignFlatButton}"
                                      Foreground="{StaticResource AccentCyan}"
                                      Height="28"
                                      Padding="12,0"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      ToolTip="Clear the form to add a new item"/>
                            </Grid>
                        </Border>

                        <StackPanel Margin="0,20,0,0">
                            <!-- Item Name -->
                            <TextBlock Text="Item Name *" 
                                     Foreground="{StaticResource Text.Label}"
                                     FontSize="11"
                                     Margin="0,0,0,8"/>
                            <TextBox Text="{Binding ItemName, UpdateSourceTrigger=PropertyChanged}"
                                   materialDesign:HintAssist.Hint="Enter item name"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   Margin="0,0,0,20"/>

                            <!-- Current Stock -->
                            <TextBlock Text="Current Stock *" 
                                     Foreground="{StaticResource Text.Label}"
                                     FontSize="11"
                                     Margin="0,0,0,8"/>
                            <TextBox Text="{Binding CurrentStock, UpdateSourceTrigger=PropertyChanged}"
                                   materialDesign:HintAssist.Hint="Enter stock quantity"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   Margin="0,0,0,20"
                                   GotFocus="NumericTextBox_GotFocus"/>

                            <!-- Unit -->
                            <TextBlock Text="Unit *" 
                                     Foreground="{StaticResource Text.Label}"
                                     FontSize="11"
                                     Margin="0,0,0,8"/>
                            <ComboBox Text="{Binding Unit}"
                                    IsEditable="True"
                                    materialDesign:HintAssist.Hint="Select or enter unit"
                                    Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                    Margin="0,0,0,20">
                                <ComboBoxItem Content="Kg"/>
                                <ComboBoxItem Content="Quintal"/>
                                <ComboBoxItem Content="Ton"/>
                                <ComboBoxItem Content="Bag"/>
                                <ComboBoxItem Content="Piece"/>
                                <ComboBoxItem Content="Liter"/>
                            </ComboBox>

                            <!-- Error Message -->
                            <Border Style="{StaticResource InfoBox}" 
                                    Background="#3a2020"
                                    BorderBrush="{StaticResource Card.Danger}"
                                    Visibility="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"
                                    Margin="0,0,0,16">
                                <TextBlock Text="{Binding ErrorMessage}"
                                         Foreground="#EF5350"
                                         TextWrapping="Wrap"/>
                            </Border>

                            <!-- Action Buttons -->
                            <Button Content="SAVE ITEM"
                                  Command="{Binding SaveItemCommand}"
                                  Style="{StaticResource Button.Success}"
                                  HorizontalAlignment="Stretch"
                                  Height="44"
                                  FontSize="13"
                                  FontWeight="SemiBold"
                                  ToolTip="Save this item to the inventory database. All fields marked with * are required"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Loading Overlay -->
            <Grid Grid.ColumnSpan="2" Background="#80000000" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                           Value="0"
                           IsIndeterminate="True"
                           Width="50" Height="50"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

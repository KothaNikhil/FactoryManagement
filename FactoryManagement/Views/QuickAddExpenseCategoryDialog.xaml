<Window x:Class="FactoryManagement.Views.QuickAddExpenseCategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Quick Add Expense Category" 
        SizeToContent="Height" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource DialogBackground}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Border BorderBrush="#444" BorderThickness="1" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="ðŸ“‚ Add New Expense Category" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <Border Height="3" Background="#4a90c8" CornerRadius="2" Margin="0,10,0,0" HorizontalAlignment="Left" Width="100"/>
            </StackPanel>

            <!-- Form -->
            <StackPanel Grid.Row="1">
                    <!-- Category Name -->
                    <TextBlock Text="Category Name *" 
                             Foreground="#AAA" 
                             FontSize="13"
                             Margin="0,0,0,8"/>
                    <TextBox x:Name="CategoryNameTextBox"
                           materialDesign:HintAssist.Hint="Enter category name"
                           Style="{StaticResource TextBox.Standard}"
                           Foreground="White"
                           Margin="0,0,0,18"/>

                    <!-- Description -->
                    <TextBlock Text="Description" 
                             Foreground="#AAA" 
                             FontSize="13"
                             Margin="0,0,0,8"/>
                    <TextBox x:Name="DescriptionTextBox"
                           materialDesign:HintAssist.Hint="Enter description (optional)"
                           Style="{StaticResource TextBox.Standard}"
                           Foreground="White"
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           MinHeight="60"
                           VerticalScrollBarVisibility="Auto"
                           Margin="0,0,0,18"/>

                    <!-- Error Message -->
                    <TextBlock x:Name="ErrorTextBlock"
                             Foreground="#FF6B6B"
                             FontSize="13"
                             Margin="0,0,0,10"
                             Visibility="Collapsed"
                             TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        Content="Cancel"
                        Style="{StaticResource Button.Secondary}"
                        Click="CancelButton_Click"
                        Margin="0,0,10,0"
                        MinWidth="100"
                        Height="40"/>
                
                <Button Grid.Column="2"
                        Content="Add Category"
                        Style="{StaticResource Button.Primary}"
                        Click="AddCategoryButton_Click"
                        MinWidth="140"
                        Height="40"/>
            </Grid>
        </Grid>
    </Border>
</Window>

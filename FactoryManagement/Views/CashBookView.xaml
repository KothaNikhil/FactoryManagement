<UserControl x:Class="FactoryManagement.Views.CashBookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="clr-namespace:FactoryManagement.Controls"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="1400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Summary Cards -->
        <Grid Grid.Row="0"
              Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Cash in Hand Card -->
            <controls:SummaryCard Grid.Column="0"
                                  Label="Cash in Hand"
                                  Value="{Binding CurrentCashInHand, StringFormat='â‚¹{0:N2}'}"
                                  Icon="ðŸ’°"
                                  CardBackground="{StaticResource Card.Success}"
                                  LabelForeground="{StaticResource Card.Success.Label}"/>

            <!-- Today's Expected Closing Card -->
            <controls:SummaryCard Grid.Column="2"
                                  Label="Today Expected"
                                  Value="{Binding TodayExpectedClosing, StringFormat='â‚¹{0:N2}'}"
                                  Icon="ðŸ“Š"
                                  CardBackground="{StaticResource Card.Info}"
                                  LabelForeground="{StaticResource Card.Info.Label}"/>

            <!-- Unreconciled Days Card -->
            <controls:SummaryCard Grid.Column="4"
                                  Label="Unreconciled"
                                  Value="{Binding UnreconciledDays, StringFormat='{}{0} days'}"
                                  Icon="â³"
                                  CardBackground="{StaticResource Card.Warning}"
                                  LabelForeground="{StaticResource Card.Warning.Label}"/>

            <!-- Total Discrepancies Card -->
            <controls:SummaryCard Grid.Column="6"
                                  Label="Discrepancies"
                                  Value="{Binding TotalDiscrepancies, StringFormat='â‚¹{0:N2}'}"
                                  Icon="âš ï¸"
                                  CardBackground="{StaticResource Card.Danger}"
                                  LabelForeground="{StaticResource Card.Danger.Label}"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- Opening Balance Form (shown when not initialized) -->
            <Border Style="{StaticResource FormCard}"
                    Visibility="{Binding ShowOpeningBalanceForm, Converter={StaticResource BooleanToVisibilityConverter}}"
                    MaxWidth="600"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <controls:SectionHeader Title="Setup Cash Book"
                                            Subtitle="Enter your current cash balance to get started"
                                            Icon="ðŸ’°"
                                            IconBackground="{StaticResource Card.Info}"
                                            Margin="0,0,0,30"/>

                    <!-- Date -->
                    <TextBlock Text="Date *"
                               Foreground="{StaticResource Text.Secondary}"
                               FontSize="11"
                               Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding OpeningBalanceDate}"
                                Style="{StaticResource DatePicker.Standard}"
                                Margin="0,0,0,15"/>

                    <!-- Amount -->
                    <TextBlock Text="Opening Cash Balance (â‚¹) *"
                               Foreground="{StaticResource Text.Secondary}"
                               FontSize="11"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding OpeningBalanceAmount, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource TextBox.Standard}"
                             materialDesign:HintAssist.Hint="Enter current cash you have"
                             Margin="0,0,0,15"/>

                    <!-- Notes -->
                    <TextBlock Text="Notes"
                               Foreground="{StaticResource Text.Secondary}"
                               FontSize="11"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding OpeningBalanceNotes, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource TextBox.Standard}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="60"
                             Margin="0,0,0,20"/>

                    <!-- Button -->
                    <Button Content="Set Opening Balance"
                            Command="{Binding SetOpeningBalanceCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            HorizontalAlignment="Center"
                            Width="200"
                            Height="40"/>

                    <!-- Error/Success Messages -->
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="{StaticResource ErrorColor}"
                               TextWrapping="Wrap"
                               Margin="0,15,0,0"
                               HorizontalAlignment="Center"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>

                    <TextBlock Text="{Binding SuccessMessage}"
                               Foreground="{StaticResource SuccessColor}"
                               TextWrapping="Wrap"
                               Margin="0,15,0,0"
                               HorizontalAlignment="Center"
                               Visibility="{Binding SuccessMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>
                </StackPanel>
            </Border>

            <!-- Main Cash Book Grid (shown when initialized) -->
            <Grid Visibility="{Binding IsInitialized, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Reconciliation Form / Actions -->
                <Border Grid.Column="0"
                        Style="{StaticResource FormCard}">
                    <StackPanel>
                        <controls:SectionHeader Title="Reconcile Cash"
                                                Subtitle="End-of-day cash counting"
                                                Icon="âœ…"
                                                IconBackground="{StaticResource Card.Success}"
                                                Margin="0,0,0,20"/>

                        <!-- Date -->
                        <TextBlock Text="Date *"
                                   Foreground="{StaticResource Text.Secondary}"
                                   FontSize="11"
                                   Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding ReconciliationDate}"
                                    Style="{StaticResource DatePicker.Standard}"
                                    Margin="0,0,0,15"/>

                        <!-- Expected Closing (Info) -->
                        <Border Background="{StaticResource SecondaryBackground}"
                                BorderBrush="{StaticResource BorderPrimary}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Expected Closing Balance"
                                           Foreground="{StaticResource Text.Secondary}"
                                           FontSize="10"/>
                                <TextBlock Text="{Binding TodayExpectedClosing, StringFormat='â‚¹{0:N2}'}"
                                           Foreground="{StaticResource Text.Primary}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Actual Cash Counted -->
                        <TextBlock Text="Actual Cash Counted (â‚¹) *"
                                   Foreground="{StaticResource Text.Secondary}"
                                   FontSize="11"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ActualCashCounted, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBox.Standard}"
                                 materialDesign:HintAssist.Hint="Count physical cash"
                                 Margin="0,0,0,15"/>

                        <!-- Discrepancy Reason (conditional) -->
                        <TextBlock Text="Discrepancy Reason"
                                   Foreground="{StaticResource Text.Secondary}"
                                   FontSize="11"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding DiscrepancyReason, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBox.Standard}"
                                 materialDesign:HintAssist.Hint="If amounts don't match, explain why"
                                 Margin="0,0,0,15"/>

                        <!-- Notes -->
                        <TextBlock Text="Notes"
                                   Foreground="{StaticResource Text.Secondary}"
                                   FontSize="11"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ReconciliationNotes, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBox.Standard}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="60"
                                 Margin="0,0,0,20"/>

                        <!-- Buttons -->
                        <Button Content="Reconcile Cash"
                                Command="{Binding ReconcileCashCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Width="150"
                                Margin="0,0,0,10"/>

                        <Button Content="Refresh Today"
                                Command="{Binding RefreshTodayCommand}"
                                Style="{StaticResource Button.Secondary}"
                                Width="150"
                                Margin="0,0,0,15"/>

                        <!-- Messages -->
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="{StaticResource ErrorColor}"
                                   TextWrapping="Wrap"
                                   FontSize="11"
                                   Margin="0,0,0,5"
                                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>

                        <TextBlock Text="{Binding SuccessMessage}"
                                   Foreground="{StaticResource SuccessColor}"
                                   TextWrapping="Wrap"
                                   FontSize="11"
                                   Visibility="{Binding SuccessMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>
                    </StackPanel>
                </Border>

                <!-- Middle Panel - Today's Cash Transactions -->
                <!-- Right Panel - Transactions and Records (Stacked Vertically) -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Today's Cash Transactions Section -->
                    <Border Grid.Row="0"
                            Style="{StaticResource FormCard}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <StackPanel Grid.Row="0"
                                        Margin="0">
                                <controls:SectionHeader Title="Today's Cash Transactions"
                                                        Subtitle="All cash movements today"
                                                        Icon="ðŸ’µ"
                                                        IconBackground="{StaticResource Card.Info}"/>
                            </StackPanel>

                            <!-- Transactions DataGrid -->
                            <DataGrid Grid.Row="1"
                                      Style="{StaticResource Section.DataGrid}"
                                      ItemsSource="{Binding TodayCashTransactions}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      CanUserAddRows="False"
                                      Background="Transparent"
                                      RowBackground="{StaticResource CardBackground}"
                                      AlternatingRowBackground="{StaticResource SecondaryBackground}"
                                      BorderThickness="0"
                                      GridLinesVisibility="None"
                                      HeadersVisibility="Column"
                                      FontSize="13">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background"
                                                Value="{StaticResource SecondaryBackground}"/>
                                        <Setter Property="Foreground"
                                                Value="{StaticResource TextPrimary}"/>
                                        <Setter Property="FontWeight"
                                                Value="Bold"/>
                                        <Setter Property="FontSize"
                                                Value="13"/>
                                        <Setter Property="Padding"
                                                Value="10"/>
                                        <Setter Property="BorderThickness"
                                                Value="0,0,1,1"/>
                                        <Setter Property="BorderBrush"
                                                Value="{StaticResource BorderPrimary}"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Type"
                                                        Binding="{Binding Type}"
                                                        Width="70"/>
                                    <DataGridTextColumn Header="Description"
                                                        Binding="{Binding Description}"
                                                        Width="*"/>
                                    <DataGridTextColumn Header="Cash In"
                                                        Binding="{Binding CashIn, StringFormat='â‚¹{0:N2}'}"
                                                        Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment"
                                                        Value="Right"/>
                                                <Setter Property="Foreground"
                                                        Value="{StaticResource SuccessColor}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Cash Out"
                                                        Binding="{Binding CashOut, StringFormat='â‚¹{0:N2}'}"
                                                        Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment"
                                                        Value="Right"/>
                                                <Setter Property="Foreground"
                                                        Value="{StaticResource ErrorColor}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Spacer -->
                    <!-- Cash Records List Section -->
                    <Border Grid.Row="2"
                            Style="{StaticResource FormCard}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header with Filters -->
                            <Border Grid.Row="0"
                                    Background="{StaticResource SecondaryBackground}"
                                    Padding="15"
                                    BorderBrush="{StaticResource BorderPrimary}"
                                    BorderThickness="0,0,0,1"
                                    Margin="-24,-24,-24,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <Border Background="{StaticResource Card.Info}"
                                                Style="{StaticResource IconBadge}"
                                                Margin="0,0,12,0">
                                            <TextBlock Text="ðŸ“–"
                                                       FontSize="18"/>
                                        </Border>
                                        <StackPanel>
                                            <TextBlock Text="Cash Book Records"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource Text.Primary}"/>
                                            <TextBlock Text="Daily cash balance tracking"
                                                       FontSize="11"
                                                       Foreground="{StaticResource Text.Secondary}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Filter Controls -->
                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal">
                                        <DatePicker SelectedDate="{Binding FilterStartDate}"
                                                    Style="{StaticResource DatePicker.Standard}"
                                                    Width="130"
                                                    Margin="0,0,8,0"
                                                    materialDesign:HintAssist.Hint="Start Date"/>
                                        <DatePicker SelectedDate="{Binding FilterEndDate}"
                                                    Style="{StaticResource DatePicker.Standard}"
                                                    Width="130"
                                                    Margin="0,0,8,0"
                                                    materialDesign:HintAssist.Hint="End Date"/>
                                        <Button Content="Apply"
                                                Command="{Binding ApplyFiltersCommand}"
                                                Style="{StaticResource Button.Secondary}"
                                                Width="70"
                                                Padding="8,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <DataGrid Grid.Row="1"
                                      Style="{StaticResource Section.DataGrid}"
                                      ItemsSource="{Binding PaginatedCashRecords}"
                                      SelectedItem="{Binding SelectedRecord}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      CanUserAddRows="False"
                                      Background="Transparent"
                                      RowBackground="{StaticResource CardBackground}"
                                      AlternatingRowBackground="{StaticResource SecondaryBackground}"
                                      BorderThickness="0"
                                      GridLinesVisibility="None"
                                      HeadersVisibility="Column"
                                      FontSize="13">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background"
                                                Value="{StaticResource SecondaryBackground}"/>
                                        <Setter Property="Foreground"
                                                Value="{StaticResource TextPrimary}"/>
                                        <Setter Property="FontWeight"
                                                Value="Bold"/>
                                        <Setter Property="FontSize"
                                                Value="13"/>
                                        <Setter Property="Padding"
                                                Value="10"/>
                                        <Setter Property="BorderThickness"
                                                Value="0,0,1,1"/>
                                        <Setter Property="BorderBrush"
                                                Value="{StaticResource BorderPrimary}"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <!-- Date -->
                                    <DataGridTextColumn Header="Date"
                                                        Binding="{Binding Date, StringFormat='dd MMM yyyy'}"
                                                        Width="110"/>

                                    <!-- Opening Balance -->
                                    <DataGridTextColumn Header="Opening (â‚¹)"
                                                        Binding="{Binding OpeningBalance, StringFormat='N2'}"
                                                        Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment"
                                                        Value="Right"/>
                                                <Setter Property="Foreground"
                                                        Value="{StaticResource Text.Primary}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- Cash In -->
                                    <DataGridTextColumn Header="Cash In (â‚¹)"
                                                        Binding="{Binding TotalCashIn, StringFormat='N2'}"
                                                        Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment"
                                                        Value="Right"/>
                                                <Setter Property="Foreground"
                                                        Value="{StaticResource SuccessColor}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- Cash Out -->
                                    <DataGridTextColumn Header="Cash Out (â‚¹)"
                                                        Binding="{Binding TotalCashOut, StringFormat='N2'}"
                                                        Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment"
                                                        Value="Right"/>
                                                <Setter Property="Foreground"
                                                        Value="{StaticResource ErrorColor}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- Expected Closing -->
                                    <DataGridTextColumn Header="Expected (â‚¹)"
                                                        Binding="{Binding ExpectedClosingBalance, StringFormat='N2'}"
                                                        Width="110">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment"
                                                        Value="Right"/>
                                                <Setter Property="Foreground"
                                                        Value="{StaticResource Text.Primary}"/>
                                                <Setter Property="FontWeight"
                                                        Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- Actual Cash -->
                                    <DataGridTextColumn Header="Actual (â‚¹)"
                                                        Binding="{Binding ActualCashCounted, StringFormat='N2'}"
                                                        Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment"
                                                        Value="Right"/>
                                                <Setter Property="Foreground"
                                                        Value="{StaticResource InfoColor}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- Discrepancy -->
                                    <DataGridTextColumn Header="Diff (â‚¹)"
                                                        Binding="{Binding Discrepancy, StringFormat='N2'}"
                                                        Width="90">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment"
                                                        Value="Right"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Discrepancy, Converter={StaticResource IsPositiveConverter}}"
                                                                 Value="True">
                                                        <Setter Property="Foreground"
                                                                Value="{StaticResource SuccessColor}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Discrepancy, Converter={StaticResource IsNegativeConverter}}"
                                                                 Value="True">
                                                        <Setter Property="Foreground"
                                                                Value="{StaticResource ErrorColor}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- Status -->
                                    <DataGridTextColumn Header="Status"
                                                        Binding="{Binding Status}"
                                                        Width="90">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment"
                                                        Value="Center"/>
                                                <Setter Property="FontSize"
                                                        Value="11"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}"
                                                                 Value="Balanced">
                                                        <Setter Property="Foreground"
                                                                Value="{StaticResource SuccessColor}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}"
                                                                 Value="Pending">
                                                        <Setter Property="Foreground"
                                                                Value="{StaticResource WarningColor}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}"
                                                                 Value="Shortage">
                                                        <Setter Property="Foreground"
                                                                Value="{StaticResource ErrorColor}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}"
                                                                 Value="Surplus">
                                                        <Setter Property="Foreground"
                                                                Value="{StaticResource InfoColor}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- Notes -->
                                    <DataGridTextColumn Header="Notes"
                                                        Binding="{Binding Notes}"
                                                        Width="*"
                                                        MinWidth="150"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Pagination -->
                            <controls:PaginationControl Grid.Row="2"
                                                        Margin="0,15,0,0"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

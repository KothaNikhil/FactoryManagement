<Window x:Class="FactoryManagement.Views.SetupWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Factory Management - Initial Setup"
        Width="700"
        Height="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PrimaryBackground}"
        Foreground="{DynamicResource Text.Primary}">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="StepTitle" BasedOn="{StaticResource SectionHeader.Title}">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="StepDescription">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource Text.Secondary}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="LineHeight" Value="18"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="0" Padding="50,40" VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="650">
                <!-- Step 0: Welcome -->
                <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=0}">
                    <TextBlock Style="{StaticResource StepTitle}" Text="Welcome to Factory Management"/>
                    <TextBlock Style="{StaticResource StepDescription}" 
                        Text="This wizard will help you set up your factory management system with initial data including users, items, and cash accounts."/>
                    
                    <Border Style="{StaticResource InfoBox}" Margin="0,40,0,0">
                        <TextBlock FontSize="14" Foreground="{DynamicResource Text.Primary}" TextWrapping="Wrap" LineHeight="22">
                            <Run FontWeight="Bold">Setup includes:</Run>
                            <LineBreak/><LineBreak/>
                            • Creating your admin account
                            <LineBreak/>
                            • Adding inventory items
                            <LineBreak/>
                            • Setting up cash accounts with opening balances
                        </TextBlock>
                    </Border>
                </StackPanel>

                <!-- Step 1: Users -->
                <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=1}">
                    <TextBlock Style="{StaticResource StepTitle}" Text="Admin User Setup"/>
                    <TextBlock Style="{StaticResource StepDescription}" 
                        Text="Create the administrator account that will be used to log in and manage the system."/>

                    <TextBlock Style="{StaticResource FormLabel}" Margin="0,40,0,10" Text="Admin Username:"/>
                    <TextBox Style="{StaticResource TextBox.Standard}" 
                             Text="{Binding AdminUsername, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <TextBlock Style="{StaticResource FormLabel}" Margin="0,20,0,10" Text="Password:"/>
                    <PasswordBox x:Name="PasswordBox" Style="{StaticResource PasswordBox.Standard}"/>
                    
                    <TextBlock Style="{StaticResource FormLabel}" Margin="0,20,0,10" Text="Confirm Password:"/>
                    <PasswordBox x:Name="PasswordConfirmBox" Style="{StaticResource PasswordBox.Standard}"/>
                </StackPanel>

                <!-- Step 2: Items -->
                <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=2}">
                    <TextBlock Style="{StaticResource StepTitle}" Text="Add Inventory Items"/>
                    <TextBlock Style="{StaticResource StepDescription}" 
                        Text="Add the items you'll be tracking in your inventory. You can add more items later from the Inventory menu."/>

                    <Grid Margin="0,40,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Item Name" Style="{StaticResource FormLabel}" Grid.Column="0" Grid.Row="0"/>
                        <TextBox Text="{Binding NewItemName, UpdateSourceTrigger=PropertyChanged}" 
                            Style="{StaticResource TextBox.Standard}" Grid.Column="0" Grid.Row="2"/>

                        <TextBlock Text="Unit" Style="{StaticResource FormLabel}" Grid.Column="2" Grid.Row="0"/>
                        <ComboBox Grid.Column="2" Grid.Row="2" 
                                  Text="{Binding NewItemUnit, UpdateSourceTrigger=PropertyChanged}"
                                  Style="{StaticResource ComboBox.Standard}"
                                  IsEditable="True">
                            <ComboBoxItem Content="Kg"/>
                            <ComboBoxItem Content="Ltr"/>
                            <ComboBoxItem Content="Pcs"/>
                            <ComboBoxItem Content="Box"/>
                            <ComboBoxItem Content="Bag"/>
                            <ComboBoxItem Content="Mtr"/>
                        </ComboBox>

                        <TextBlock Text="Opening Stock" Style="{StaticResource FormLabel}" Grid.Column="4" Grid.Row="0"/>
                        <TextBox Text="{Binding NewItemStock, UpdateSourceTrigger=PropertyChanged}" 
                            Style="{StaticResource TextBox.Standard}" Grid.Column="4" Grid.Row="2"/>

                        <Button Grid.Column="6" Grid.Row="2" Command="{Binding AddItemCommand}" Content="Add Item" 
                            Style="{StaticResource Button.Primary}" Width="110"/>
                    </Grid>

                    <DataGrid ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" MaxHeight="280"
                        Style="{StaticResource DataGrid.Standard}" ColumnHeaderStyle="{StaticResource DataGrid.Header.Standard}"
                        RowStyle="{StaticResource DataGrid.Dark.Row}" CellStyle="{StaticResource DataGrid.Dark.Cell}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*"/>
                            <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width="100"/>
                            <DataGridTextColumn Header="Opening Stock" Binding="{Binding CurrentStock}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Command="{Binding RemoveItemCommand}" Content="Remove Selected" 
                        Style="{StaticResource Button.Secondary}" HorizontalAlignment="Left" Margin="0,15,0,0"/>
                </StackPanel>

                <!-- Step 3: Cash Accounts -->
                <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=3}">
                    <TextBlock Style="{StaticResource StepTitle}" Text="Set Opening Balances"/>
                    <TextBlock Style="{StaticResource StepDescription}" 
                        Text="Enter the opening balances for your cash and bank accounts. These amounts will be recorded as the starting balance."/>

                    <Grid Margin="0,40,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Main Cash Account Opening Balance" Style="{StaticResource FormLabel}" Margin="0,0,0,10"/>
                            <TextBox Text="{Binding MainCashOpeningBalance, UpdateSourceTrigger=PropertyChanged}" 
                                Style="{StaticResource TextBox.Standard}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Main Bank Account Opening Balance" Style="{StaticResource FormLabel}" Margin="0,0,0,10"/>
                            <TextBox Text="{Binding MainBankOpeningBalance, UpdateSourceTrigger=PropertyChanged}" 
                                Style="{StaticResource TextBox.Standard}"/>
                        </StackPanel>
                    </Grid>

                    <Border Style="{StaticResource InfoBox}">
                        <TextBlock FontSize="14" Foreground="{DynamicResource Text.Primary}" TextWrapping="Wrap" LineHeight="22">
                            <Run FontWeight="Bold">Note:</Run> These opening balances will be recorded in your financial records. You can add more cash accounts later from the Cash Accounts menu.
                        </TextBlock>
                    </Border>
                </StackPanel>

                <!-- Step 4: Complete -->
                <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=4}">
                    <TextBlock Style="{StaticResource StepTitle}" Text="Setup Complete!"/>
                    <TextBlock Style="{StaticResource StepDescription}" 
                        Text="Your factory management system is now configured and ready to use."/>

                    <Border Style="{StaticResource InfoBox}" Margin="0,40,0,30">
                        <TextBlock FontSize="14" Foreground="{DynamicResource Text.Primary}" TextWrapping="Wrap" LineHeight="24">
                            <Run FontWeight="Bold">Setup Summary:</Run>
                            <LineBreak/><LineBreak/>
                            ✓ Admin account created
                            <LineBreak/>
                            ✓ Inventory items configured
                            <LineBreak/>
                            ✓ Cash accounts set up with opening balances
                        </TextBlock>
                    </Border>

                    <TextBlock FontSize="14" Foreground="{DynamicResource Text.Secondary}" TextWrapping="Wrap" LineHeight="22">
                        You can now log in with your admin credentials. Additional features and settings are available from the main application menu.
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Navigation Buttons -->
        <Border Grid.Row="1" Background="{DynamicResource SecondaryBackground}" Padding="50,25" BorderThickness="0,1,0,0" 
            BorderBrush="{DynamicResource Border.Primary}">
            <Grid MaxWidth="650">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Command="{Binding PreviousStepCommand}" Content="← Back" 
                    Style="{StaticResource Button.Secondary}" MinWidth="120"
                    IsEnabled="{Binding CurrentStep, Converter={StaticResource IntToBoolConverter}}"/>

                <Button Grid.Column="2" Command="{Binding NextStepCommand}" Content="Next →" 
                    Style="{StaticResource Button.Primary}" MinWidth="120"
                    Visibility="{Binding CurrentStep, Converter={StaticResource IntLessThanConverter}, ConverterParameter=4}"/>

                <Button Grid.Column="2" Command="{Binding CompleteSetupCommand}" Content="Complete Setup" 
                    Style="{StaticResource Button.Success}" MinWidth="150"
                    Visibility="{Binding CurrentStep, Converter={StaticResource IntEqualConverter}, ConverterParameter=4}"/>
            </Grid>
        </Border>
    </Grid>
</Window>

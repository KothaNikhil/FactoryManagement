<UserControl x:Class="FactoryManagement.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filter Panel -->
        <materialDesign:Card Grid.Row="0" Padding="20" Margin="0,0,0,20" Style="{StaticResource ModernCard}" Background="#2a2a2a">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- All Filters in One Row -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Report Type -->
                    <ComboBox Grid.Column="0"
                            ItemsSource="{Binding ReportTypes}"
                            SelectedItem="{Binding SelectedReportType}"
                            materialDesign:HintAssist.Hint="Report Type"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            FontSize="13"/>
                    
                    <!-- Item Filter (Inventory only) -->
                    <ComboBox Grid.Column="2"
                            ItemsSource="{Binding Items}"
                            SelectedItem="{Binding SelectedItem}"
                            DisplayMemberPath="ItemName"
                            materialDesign:HintAssist.Hint="Filter by Item"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            FontSize="13"
                            Visibility="{Binding SelectedReportType, Converter={StaticResource EnumVisibilityConverter}, ConverterParameter=Inventory}"/>

                    <!-- Party Filter (Financial) -->
                    <ComboBox Grid.Column="2"
                            ItemsSource="{Binding Parties}"
                            SelectedItem="{Binding SelectedParty}"
                            DisplayMemberPath="Name"
                            materialDesign:HintAssist.Hint="Filter by Party"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            FontSize="13"
                            Visibility="{Binding SelectedReportType, Converter={StaticResource EnumVisibilityConverter}, ConverterParameter=Financial}"/>
                    
                    <!-- Worker Filter (Wages only) -->
                    <ComboBox Grid.Column="2"
                            ItemsSource="{Binding Workers}"
                            SelectedItem="{Binding SelectedWorker}"
                            DisplayMemberPath="Name"
                            materialDesign:HintAssist.Hint="Filter by Worker"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            FontSize="13"
                            Visibility="{Binding SelectedReportType, Converter={StaticResource EnumVisibilityConverter}, ConverterParameter=Wages}"/>

                    <!-- Party Filter for Inventory -->
                    <ComboBox Grid.Column="4"
                            ItemsSource="{Binding Parties}"
                            SelectedItem="{Binding SelectedParty}"
                            DisplayMemberPath="Name"
                            materialDesign:HintAssist.Hint="Filter by Party"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            FontSize="13"
                            Visibility="{Binding SelectedReportType, Converter={StaticResource EnumVisibilityConverter}, ConverterParameter=Inventory}"/>

                    <!-- Start Date -->
                    <DatePicker Grid.Column="6"
                              SelectedDate="{Binding StartDate}"
                              materialDesign:HintAssist.Hint="Start Date"
                              Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                              FontSize="13"/>

                    <!-- End Date -->
                    <DatePicker Grid.Column="8"
                              SelectedDate="{Binding EndDate}"
                              materialDesign:HintAssist.Hint="End Date"
                              Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                              FontSize="13"/>
                </Grid>
                
                <!-- Action Buttons -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Content="APPLY FILTERS" 
                              Command="{Binding FilterByItemCommand}"
                              Height="40"
                              Padding="20,0"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Background="#0275d8"
                              BorderThickness="0"
                              Foreground="White"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Margin="0,0,12,0"/>
                              
                        <Button Content="SHOW ALL" 
                              Command="{Binding LoadAllTransactionsCommand}"
                              Height="40"
                              Padding="20,0"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Style="{StaticResource MaterialDesignOutlinedButton}"
                              Foreground="White"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Command="{Binding ExportToExcelCommand}"
                              Height="40"
                              Padding="16,0"
                              FontSize="13"
                              FontWeight="Medium"
                              Style="{StaticResource MaterialDesignOutlinedButton}"
                              Foreground="White"
                              Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileExcel" Width="18" Height="18" Margin="0,0,6,0"/>
                                <TextBlock Text="Excel"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding ExportToCsvCommand}"
                              Height="40"
                              Padding="16,0"
                              FontSize="13"
                              FontWeight="Medium"
                              Style="{StaticResource MaterialDesignOutlinedButton}"
                              Foreground="White">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileDelimited" Width="18" Height="18" Margin="0,0,6,0"/>
                                <TextBlock Text="CSV"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>

        <!-- Transactions DataGrid -->
        <materialDesign:Card Grid.Row="1" Padding="20" Style="{StaticResource ModernCard}" Background="#2a2a2a">
            <DockPanel>
                <!-- Summary Header -->
                <Grid DockPanel.Dock="Top" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Total Amount Card -->
                    <Border Grid.Column="0"
                            Background="#1a1a2e"
                            BorderBrush="{StaticResource AccentCyan}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0"
                                    Background="#0275d8"
                                    Width="40" Height="40" CornerRadius="8"
                                    Margin="0,0,12,0">
                                <materialDesign:PackIcon Kind="CurrencyInr" 
                                                       Width="24" Height="24" 
                                                       Foreground="White" 
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Total Amount" 
                                         FontSize="12"
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding TotalAmount, StringFormat='₹ {0:N2}'}" 
                                         FontSize="20"
                                         FontWeight="Bold"
                                         Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Total Transactions Card -->
                    <Border Grid.Column="2"
                            Background="#1a1a2e"
                            BorderBrush="{StaticResource AccentCyan}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0"
                                    Background="#1e7e34"
                                    Width="40" Height="40" CornerRadius="8"
                                    Margin="0,0,12,0">
                                <materialDesign:PackIcon Kind="Receipt" 
                                                       Width="24" Height="24" 
                                                       Foreground="White" 
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Total Transactions" 
                                         FontSize="12"
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding TransactionCount}" 
                                         FontSize="20"
                                         FontWeight="Bold"
                                         Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Inventory Transactions DataGrid -->
                <DataGrid ItemsSource="{Binding Transactions}"
                        Visibility="{Binding SelectedReportType, Converter={StaticResource EnumVisibilityConverter}, ConverterParameter=Inventory}"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        IsReadOnly="True"
                        VirtualizingPanel.IsVirtualizing="True"
                        VirtualizingPanel.VirtualizationMode="Recycling"
                        EnableRowVirtualization="True"
                        Background="Transparent"
                        RowBackground="#1a1a2e"
                        AlternatingRowBackground="#16213e"
                        BorderThickness="0"
                        GridLinesVisibility="None"
                        HeadersVisibility="Column"
                        SelectionMode="Single">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#302b63"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Height" Value="56"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding TransactionId}" Width="70"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat=dd/MM/yyyy}" Width="110"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding TransactionType}" Width="90"/>
                        <DataGridTextColumn Header="Item" Binding="{Binding Item.ItemName}" Width="*"/>
                        <DataGridTextColumn Header="Party" Binding="{Binding Party.Name}" Width="*"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity, StringFormat=N2}" Width="100"/>
                        <DataGridTextColumn Header="Price/Unit" Binding="{Binding PricePerUnit, StringFormat='₹ {0:N2}'}" Width="110"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount, StringFormat='₹ {0:N2}'}" Width="130"/>
                        <DataGridTextColumn Header="User" Binding="{Binding User.Username}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Financial Transactions DataGrid -->
                <DataGrid ItemsSource="{Binding FinancialTransactions}"
                        Visibility="{Binding SelectedReportType, Converter={StaticResource EnumVisibilityConverter}, ConverterParameter=Financial}"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        IsReadOnly="True"
                        VirtualizingPanel.IsVirtualizing="True"
                        VirtualizingPanel.VirtualizationMode="Recycling"
                        Background="Transparent"
                        RowBackground="#1a1a2e"
                        AlternatingRowBackground="#16213e"
                        BorderThickness="0"
                        GridLinesVisibility="None"
                        HeadersVisibility="Column"
                        SelectionMode="Single">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#302b63"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Height" Value="56"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding FinancialTransactionId}" Width="70"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat=dd/MM/yyyy}" Width="110"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding TransactionType}" Width="140"/>
                        <DataGridTextColumn Header="Party" Binding="{Binding Party.Name}" Width="*"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat='₹ {0:N2}'}" Width="120"/>
                        <DataGridTextColumn Header="Interest %" Binding="{Binding InterestRate, StringFormat=N2}" Width="100"/>
                        <DataGridTextColumn Header="Interest Amt" Binding="{Binding InterestAmount, StringFormat='₹ {0:N2}'}" Width="120"/>
                        <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat=dd/MM/yyyy}" Width="110"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Wage Transactions DataGrid -->
                <DataGrid ItemsSource="{Binding WageTransactions}"
                        Visibility="{Binding SelectedReportType, Converter={StaticResource EnumVisibilityConverter}, ConverterParameter=Wages}"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        IsReadOnly="True"
                        VirtualizingPanel.IsVirtualizing="True"
                        VirtualizingPanel.VirtualizationMode="Recycling"
                        Background="Transparent"
                        RowBackground="#1a1a2e"
                        AlternatingRowBackground="#16213e"
                        BorderThickness="0"
                        GridLinesVisibility="None"
                        HeadersVisibility="Column"
                        SelectionMode="Single">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#302b63"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Height" Value="56"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding WageTransactionId}" Width="70"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat=dd/MM/yyyy}" Width="110"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding TransactionType}" Width="140"/>
                        <DataGridTextColumn Header="Worker" Binding="{Binding Worker.Name}" Width="*"/>
                        <DataGridTextColumn Header="Days" Binding="{Binding DaysWorked, StringFormat=N1}" Width="70"/>
                        <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked, StringFormat=N1}" Width="70"/>
                        <DataGridTextColumn Header="Rate" Binding="{Binding Rate, StringFormat='₹ {0:N2}'}" Width="100"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat='₹ {0:N2}'}" Width="110"/>
                        <DataGridTextColumn Header="Overtime" Binding="{Binding OvertimeAmount, StringFormat='₹ {0:N2}'}" Width="100"/>
                        <DataGridTextColumn Header="Adv. Adj" Binding="{Binding AdvanceAdjusted, StringFormat='₹ {0:N2}'}" Width="100"/>
                        <DataGridTextColumn Header="Deductions" Binding="{Binding Deductions, StringFormat='₹ {0:N2}'}" Width="110"/>
                        <DataGridTextColumn Header="Net Amount" Binding="{Binding NetAmount, StringFormat='₹ {0:N2}'}" Width="130"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </materialDesign:Card>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
              Background="{StaticResource SurfaceDark}"
              CornerRadius="8"
              Padding="20,12"
              Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Information" Width="18" Height="18" 
                                       Foreground="{StaticResource TextSecondary}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                <TextBlock Text="{Binding ErrorMessage}"
                         Foreground="{StaticResource TextSecondary}"
                         VerticalAlignment="Center"
                         TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" Background="#80000000" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                       Value="0"
                       IsIndeterminate="True"
                       Width="50" Height="50"/>
        </Grid>
    </Grid>
</UserControl>
